<Layout
  title="Our Work â€” Rocky Concrete Portfolio & Project Gallery"
  description="Explore Rocky Concrete's portfolio of completed projects including concrete work, outdoor kitchens, fire pits, pool remodels, and landscaping in Bakersfield, CA."
>
  <Header />

  <main class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
    <!-- Hero Section - Minimal Industrial -->
    <section class="relative min-h-[60vh] flex items-center justify-center bg-[#0A0A0A] overflow-hidden">
      <!-- Subtle texture overlay -->
      <div class="absolute inset-0 opacity-5 mix-blend-overlay bg-[url('data:image/svg+xml;base64,')]"></div>

      <div class="container relative z-10 max-w-5xl mx-auto px-6 md:px-12 py-20 md:py-24">
        <div class="text-center">
          <!-- Main Heading with Mercedes Font -->
          <h1 class="text-6xl md:text-7xl lg:text-8xl text-white mb-6 tracking-wide font-light">
            PROJECT SHOWCASE
          </h1>

          <!-- Subtle accent line -->
          <div class="w-24 h-1 bg-primary mx-auto mb-8"></div>

          <!-- Subheading -->
          <p class="text-base md:text-lg text-[#8B9AAB] max-w-2xl mx-auto">
            Concrete and landscaping projects across Bakersfield and surrounding areas
          </p>
        </div>
      </div>

      <!-- Bottom fade -->
      <div class="absolute bottom-0 left-0 right-0 h-20 bg-linear-to-t from-white to-transparent"></div>
    </section>

    <!-- Mobile Category Filter Bar (Hidden on Desktop) -->
    <div class="lg:hidden sticky top-16 z-40 bg-white border-b-2 border-gray-200">
      <!-- Grid Container - Clean, modern tab-style navigation -->
      <div class="grid grid-cols-2 gap-0">
        <!-- All Categories Button -->
        <button
          class="mobile-filter-btn px-3 py-3.5 font-semibold text-sm transition-all duration-200 border-b-3 border-gray-900 bg-gray-50 text-gray-900"
          data-target="all"
        >
          ALL PROJECTS
        </button>

        <!-- Concrete Work -->
        <button
          class="mobile-filter-btn px-3 py-3.5 font-semibold text-sm transition-all duration-200 border-b-3 border-transparent bg-white text-gray-600 hover:bg-gray-50 hover:text-gray-900"
          data-target="#section-concrete"
        >
          CONCRETE
        </button>

        <!-- Outdoor Living -->
        <button
          class="mobile-filter-btn px-3 py-3.5 font-semibold text-sm transition-all duration-200 border-b-3 border-transparent bg-white text-gray-600 hover:bg-gray-50 hover:text-gray-900"
          data-target="#section-outdoor-living"
        >
          OUTDOOR
        </button>

        <!-- Pools & Spas -->
        <button
          class="mobile-filter-btn px-3 py-3.5 font-semibold text-sm transition-all duration-200 border-b-3 border-transparent bg-white text-gray-600 hover:bg-gray-50 hover:text-gray-900"
          data-target="#section-pools-spas"
        >
          POOLS & SPAS
        </button>

        <!-- Fire Features -->
        <button
          class="mobile-filter-btn px-3 py-3.5 font-semibold text-sm transition-all duration-200 border-b-3 border-transparent bg-white text-gray-600 hover:bg-gray-50 hover:text-gray-900"
          data-target="#section-fire-features"
        >
          FIRE FEATURES
        </button>

        <!-- Landscaping -->
        <button
          class="mobile-filter-btn px-3 py-3.5 font-semibold text-sm transition-all duration-200 border-b-3 border-transparent bg-white text-gray-600 hover:bg-gray-50 hover:text-gray-900"
          data-target="#section-landscaping"
        >
          LANDSCAPING
        </button>

        <!-- Iron Work -->
        <button
          class="mobile-filter-btn px-3 py-3.5 font-semibold text-sm transition-all duration-200 border-b-3 border-transparent bg-white text-gray-600 hover:bg-gray-50 hover:text-gray-900"
          data-target="#section-iron-work"
