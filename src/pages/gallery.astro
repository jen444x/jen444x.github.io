            LANDSCAPE
          </button>

          <button
            class="filter-btn px-4 py-4 font-['Bebas_Neue'] tracking-wider text-base transition-all duration-200 border-2 border-transparent bg-charcoal-light text-slate-light"
            data-category="iron-work"
          >
            IRON WORK
          </button>
        </div>
      </div>
    </div>

    <!-- Gallery Section - Full Width -->
    <section class="section-padding bg-white border-t border-bronze/10">
      <div class="max-w-[1400px] mx-auto px-6 md:px-8">
        <!-- Gallery Grid - Full Width -->
        <div id="gallery-container">
            <!-- Concrete Work Section -->
            <section id="section-concrete" class="mb-16 scroll-mt-24">
              <h2 class="font-['Bebas_Neue'] text-3xl md:text-4xl tracking-wider text-charcoal mb-8 pb-3 border-b-2 border-bronze">
                Concrete Work
              </h2>

              <!-- Walkways Subsection -->
              {galleryItems.filter(item => item.category === "concrete" && item.type === "walkways").length > 0 && (
                <div id="concrete-walkways" class="mb-12 scroll-mt-24">
