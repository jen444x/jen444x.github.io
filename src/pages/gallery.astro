<Layout
  title="Our Work â€” Rocky Concrete Portfolio & Project Gallery"
  description="Explore Rocky Concrete's portfolio of completed projects including concrete work, outdoor kitchens, fire pits, pool remodels, and landscaping in Bakersfield, CA."
>
  <Header />

  <main class="min-h-screen">
    <!-- Hero Section - Luxury Industrial -->
    <section class="relative min-h-[60vh] flex items-center justify-center bg-black-pure overflow-hidden section-padding border-t border-bronze/10">
      <!-- Subtle texture overlay -->
      <div class="absolute inset-0 opacity-[0.03] mix-blend-overlay bg-[url('data:image/svg+xml;base64,')]"></div>

      <div class="container relative z-20 max-w-5xl mx-auto px-6 md:px-12">
        <div class="text-center hero-content">
          <!-- Main Heading - Bebas Neue Luxury -->
          <h1 class="font-['Bebas_Neue'] text-6xl md:text-7xl lg:text-8xl text-white mb-6 tracking-wider font-light" style="text-shadow: 0 4px 24px rgb(0 0 0 / 70%);">
            PROJECT SHOWCASE
          </h1>

          <!-- Bronze accent line -->
          <div class="w-20 h-0.5 bg-bronze mx-auto mb-8"></div>

          <!-- Subheading -->
          <p class="text-base md:text-lg text-slate-light max-w-2xl mx-auto font-light leading-relaxed">
            Concrete and landscaping projects across Bakersfield and surrounding areas
          </p>
        </div>
      </div>
    </section>

    <!-- Sticky Horizontal Filter Bar - Luxury Industrial BOLD -->
    <div id="filter-bar" class="sticky top-20 md:top-24 z-40 bg-charcoal shadow-2xl transition-all duration-500">
      <!-- Bronze top accent line -->
      <div class="h-1 bg-gradient-to-r from-transparent via-bronze to-transparent"></div>

      <div class="max-w-[1400px] mx-auto px-6 md:px-8 py-2 md:py-3">
        <!-- Desktop: Horizontal Flex Layout with Logo -->
        <div class="hidden md:flex items-center justify-between gap-4">
          <!-- Logo - Hidden initially, shows on scroll -->
          <a href="/" id="filter-bar-logo" class="opacity-0 pointer-events-none transition-all duration-500 shrink-0">
            <img src="/img/Background.png" alt="Rocky Concrete Logo" class="h-12 w-auto" />
          </a>

          <!-- Filter Buttons Container -->
          <div class="flex items-center justify-start gap-2 flex-1 ml-4">
          <!-- CONCRETE WORK - Has Subcategories -->
          <div class="relative group">
            <button
              class="filter-btn cursor-pointer px-6 py-3 font-['Bebas_Neue'] tracking-[0.1em] text-lg transition-all duration-300 text-slate-light hover:text-white relative border-2 border-transparent hover:border-bronze/30"
              data-category="concrete"
            >
              CONCRETE WORK
              <svg class="inline-block w-4 h-4 ml-2 transition-transform group-hover:rotate-180" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
              <span class="absolute bottom-0 left-0 w-full h-1 bg-bronze scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
            </button>

            <!-- Dropdown -->
            <div class="absolute top-full left-0 mt-2 bg-charcoal-light border-2 border-bronze/20 shadow-2xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 min-w-[240px] z-50">
