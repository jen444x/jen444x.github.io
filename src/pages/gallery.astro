                        data-category={item.category}
                        data-type={item.type || ""}
                        data-finish={item.finish || ""}
                        data-index={galleryItems.indexOf(item)}
                      >
                        <div class="relative overflow-hidden aspect-[4/3] bg-gray-100">
                          <img
                            src={item.src}
                            alt={item.alt}
                            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                            loading="lazy"
                          />
                          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/0 to-black/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            <div class="absolute bottom-4 left-4 right-4">
                              <p class="text-white font-medium text-sm md:text-base">
                                {item.alt}
                              </p>
                            </div>
                          </div>
                          <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            <div class="bg-white/90 rounded-full p-4 transform scale-0 group-hover:scale-100 transition-transform duration-300">
                              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v6m3-3H7" />
                              </svg>
                            </div>
                          </div>
                        </div>
                      </article>
                    ))}
                  </div>
                </div>
              )}

              <!-- Flatwork Subsection -->
              {galleryItems.filter(item => item.category === "concrete" && item.type === "flatwork").length > 0 && (
                <div id="concrete-flatwork" class="mb-12 scroll-mt-24">
                  <h3 class="text-xl font-semibold text-gray-700 mb-4 flex items-center">
                    <span class="w-1 h-6 bg-primary mr-3"></span>
                    Flatwork & Patios
                  </h3>
                  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
                    {galleryItems.filter(item => item.category === "concrete" && item.type === "flatwork").map((item, index) => (
                      <article
