          <!-- Gallery Grid -->
          <div class="flex-1 min-w-0" id="gallery-container">
            <!-- Concrete Work Section -->
            <section id="section-concrete" class="mb-16 scroll-mt-24">
              <h2 class="text-2xl md:text-3xl font-bold text-gray-800 mb-8 pb-3 border-b-2 border-primary">
                Concrete Work
              </h2>

              <!-- Walkways Subsection -->
              {galleryItems.filter(item => item.category === "concrete" && item.type === "walkways").length > 0 && (
                <div id="concrete-walkways" class="mb-12 scroll-mt-24">
                  <h3 class="text-xl font-semibold text-gray-700 mb-4 flex items-center">
                    <span class="w-1 h-6 bg-primary mr-3"></span>
                    Walkways
                  </h3>
                  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
                    {galleryItems.filter(item => item.category === "concrete" && item.type === "walkways").map((item, index) => (
                      <article
                        class="gallery-item group cursor-pointer overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2"
                        data-category={item.category}
                        data-type={item.type || ""}
                        data-finish={item.finish || ""}
                        data-index={galleryItems.indexOf(item)}
                      >
                        <div class="relative overflow-hidden aspect-[4/3] bg-gray-100">
                          <img
                            src={item.src}
                            alt={item.alt}
                            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                            loading={index < 3 ? "eager" : "lazy"}
                          />
