              <!-- Stairs Subsection -->
              {galleryItems.filter(item => item.category === "concrete" && item.type === "stairs").length > 0 && (
                <div id="concrete-stairs" class="mb-12 scroll-mt-24">
                  <h3 class="text-xl font-semibold text-gray-700 mb-4 flex items-center">
                    <span class="w-1 h-6 bg-primary mr-3"></span>
                    Steps & Stairs
