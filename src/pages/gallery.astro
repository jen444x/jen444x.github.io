  // Navigation elements
  const filterBtns = document.querySelectorAll(".filter-btn");
  const subcatBtns = document.querySelectorAll(".subcat-btn");
  const backToTopBtn = document.getElementById("back-to-top");
  const sections = document.querySelectorAll("section[id^='section-']");

  let currentFilter = "all";

  // SMOOTH SCROLL TO SECTIONS (No filtering - show all work)
  function scrollToSection(category: string, subcategory: string | null = null) {
    let targetId = `#section-${category}`;

    // If subcategory specified, scroll to that instead
    if (subcategory) {
      targetId = `#${category}-${subcategory}`;
    }

    const target = document.querySelector(targetId);
    if (target) {
      const headerOffset = 120; // Account for sticky filter bar
      const targetPosition = target.getBoundingClientRect().top + window.pageYOffset - headerOffset;
      window.scrollTo({ top: targetPosition, behavior: "smooth" });
    }
  }

  // Update active button states
  function updateActiveButton(category: string) {
    filterBtns.forEach((btn) => {
      const btnCategory = btn.getAttribute("data-category");
      const bronzeLine = btn.querySelector("span");

      // Reset all buttons
      btn.classList.remove(
        "border-bronze",
        "bg-bronze/10",
        "text-white",
        "border-bronze/30"
      );
      btn.classList.add("border-transparent", "text-slate-light");

      if (bronzeLine) {
        bronzeLine.classList.remove("scale-x-100");
        bronzeLine.classList.add("scale-x-0");
      }

      // Activate matching button
      if (btnCategory === category) {
        btn.classList.remove("border-transparent", "text-slate-light");
        btn.classList.add("text-white");

        // Desktop - border and underline
        if (window.innerWidth >= 768) {
          btn.classList.add("border-bronze/30");
          if (bronzeLine) {
            bronzeLine.classList.remove("scale-x-0");
            bronzeLine.classList.add("scale-x-100");
          }
        } else {
          // Mobile - bronze border
          btn.classList.add("border-bronze", "bg-bronze/10");
        }
      }
    });
  }

  // Main category button clicks - SCROLL TO SECTION
  filterBtns.forEach((btn) => {
    btn.addEventListener("click", () => {
      const category = btn.getAttribute("data-category");
      if (category) {
        scrollToSection(category);
        updateActiveButton(category);
      }
    });
  });

  // Subcategory button clicks - SCROLL TO SUBCATEGORY
  subcatBtns.forEach((btn) => {
    btn.addEventListener("click", () => {
      const category = btn.getAttribute("data-category");
      const subcategory = btn.getAttribute("data-subcategory");

      if (category && subcategory) {
        scrollToSection(category, subcategory);
        updateActiveButton(category);
      }
    });
  });

  // Back to top button
  if (backToTopBtn) {
    window.addEventListener("scroll", () => {
      if (window.scrollY > 300) {
        backToTopBtn.classList.remove("opacity-0", "pointer-events-none");
        backToTopBtn.classList.add("opacity-100");
      } else {
        backToTopBtn.classList.add("opacity-0", "pointer-events-none");
        backToTopBtn.classList.remove("opacity-0");
      }
    });

    backToTopBtn.addEventListener("click", () => {
      window.scrollTo({ top: 0, behavior: "smooth" });
    });
  }

  // All sections visible by default (no filtering)

  // HIDE HEADER + SHOW LOGO IN FILTER BAR ON SCROLL
  const header = document.querySelector("header");
  const filterBar = document.getElementById("filter-bar");
  const filterBarLogo = document.getElementById("filter-bar-logo");
  let lastScrollY = 0;
  let headerHidden = false;

  window.addEventListener("scroll", () => {
    const scrollY = window.scrollY;

    // When scrolled down past 150px
    if (scrollY > 150 && !headerHidden) {
      // Hide header
      if (header) {
        header.style.transform = "translateY(-100%)";
        header.style.opacity = "0";
      }

      // Show logo in filter bar
      if (filterBarLogo) {
        filterBarLogo.classList.remove("opacity-0", "pointer-events-none");
        filterBarLogo.classList.add("opacity-100");
      }

      // Move filter bar to top
      if (filterBar) {
        filterBar.style.top = "0";
      }

      headerHidden = true;
    }
    // When scrolled back to top
    else if (scrollY <= 150 && headerHidden) {
      // Show header
      if (header) {
        header.style.transform = "translateY(0)";
        header.style.opacity = "1";
      }

      // Hide logo in filter bar
      if (filterBarLogo) {
        filterBarLogo.classList.remove("opacity-100");
        filterBarLogo.classList.add("opacity-0", "pointer-events-none");
      }

      // Move filter bar back down
      if (filterBar) {
        const isMobile = window.innerWidth < 768;
        filterBar.style.top = isMobile ? "5rem" : "6rem"; // top-20 md:top-24
      }

      headerHidden = false;
    }

    lastScrollY = scrollY;
  });

  // Make sure header has transition
  if (header) {
    header.style.transition = "transform 0.5s ease, opacity 0.5s ease";
  }

  // Run on page load (handles hash navigation from services section)
