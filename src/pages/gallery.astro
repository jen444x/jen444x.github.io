                    <ul class="sidebar-subcategories ml-4 mt-2 space-y-1" data-parent="outdoor-living">
                      <li>
                        <button
                          class="sidebar-subcat-link w-full text-left px-3 py-1.5 text-sm rounded-md transition-all duration-200 text-gray-600 hover:bg-gray-50 hover:text-primary"
                          data-target="#outdoor-living-outdoor-kitchens"
                        >
                          Outdoor Kitchens
                        </button>
                      </li>
                      <li>
                        <button
                          class="sidebar-subcat-link w-full text-left px-3 py-1.5 text-sm rounded-md transition-all duration-200 text-gray-600 hover:bg-gray-50 hover:text-primary"
                          data-target="#outdoor-living-covered-patios"
                        >
                          Covered Patios
                        </button>
                      </li>
                    </ul>
                  </li>
                  <li>
                    <button
                      class="sidebar-category-link w-full text-left px-4 py-2.5 rounded-lg transition-all duration-200 text-gray-700 hover:bg-gray-100 hover:text-primary font-medium"
                      data-category="pools-spas"
                      data-target="#section-pools-spas"
                    >
                      Pools & Spas
                    </button>
                  </li>
                  <li>
                    <button
                      class="sidebar-category-link w-full text-left px-4 py-2.5 rounded-lg transition-all duration-200 text-gray-700 hover:bg-gray-100 hover:text-primary font-medium"
                      data-category="fire-features"
                      data-target="#section-fire-features"
                    >
                      Fire Features
                    </button>
