            class={`filter-btn px-4 py-4 font-['Bebas_Neue'] tracking-wider text-base transition-all duration-200 border-2 bg-charcoal-light ${
              category === 'ironwork'
                ? 'text-white border-bronze bg-bronze/10'
                : 'text-slate-light border-transparent'
            }`}
