---
import { getCollection } from 'astro:content';
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

export async function getStaticPaths() {
  const categories = [
    { slug: 'concrete', name: 'Concrete Work', description: 'Driveways, walkways, patios, stairs, and professional flatwork' },
    { slug: 'outdoor-kitchens', name: 'Outdoor Kitchens', description: 'Luxury outdoor kitchen designs with professional countertops and entertainment setups' },
    { slug: 'covered-patios', name: 'Covered Patios', description: 'Elegant covered patio designs with stone columns and premium finishes' },
    { slug: 'pools-spas', name: 'Pools & Spas', description: 'Pool remodels, spa installations, and backyard transformations' },
    { slug: 'fire-features', name: 'Fire Features', description: 'Custom fire pits, outdoor fireplaces, and fire feature installations' },
    { slug: 'landscaping', name: 'Landscaping', description: 'Artificial turf, gardens, water features, and complete landscape design' },
    { slug: 'ironwork', name: 'Iron Work', description: 'Decorative gates, railings, archways, and custom metalwork' },
  ];

  return categories.map(category => ({
    params: { category: category.slug },
    props: { categoryInfo: category },
  }));
}

const { category } = Astro.params;
const { categoryInfo } = Astro.props;

// Get all gallery items and filter by category
const allGalleryItems = await getCollection('gallery');
const galleryItems = allGalleryItems
  .filter(item => category in item.data.categories)
  .map((item, index) => ({
    src: item.data.image,
    alt: item.data.alt,
    title: item.data.title,
    categories: item.data.categories,
    subcategory: item.data.categories[category as keyof typeof item.data.categories],
    featured: item.data.featured,
    originalIndex: index,
  }));

// Define subcategories for each category (matches original gallery.astro structure)
const categorySubcategories: Record<string, { slug: string; name: string }[]> = {
  'concrete': [
    { slug: 'walkways', name: 'Walkways' },
    { slug: 'stairs', name: 'Steps & Stairs' },
    { slug: 'flatwork', name: 'Flatwork & Patios' }
  ],
  'landscaping': [
    { slug: 'turf', name: 'Artificial Turf' },
    { slug: 'gardens', name: 'Gardens' },
    { slug: 'water-features', name: 'Water Features' }
  ]
};

// Get subcategories for current category (if any)
const subcategories = categorySubcategories[category as string] || [];
---

<Layout
  title={`${categoryInfo.name} â€” Rocky Concrete Portfolio`}
  description={`${categoryInfo.description} by Rocky Concrete in Bakersfield, CA.`}
>
