---
import { sanityClient, urlFor } from "../../sanity/client";
import GalleryLayout from "../../layouts/GalleryLayout.astro";
import CategoryNav from "../../components/CategoryNav.astro";

export const prerender = true;

export async function getStaticPaths() {
  const categories = [
    {
      slug: "concrete",
      name: "Concrete Work",
      description:
        "Driveways, walkways, patios, stairs, and professional flatwork",
    },
    {
      slug: "outdoor-kitchens",
      name: "Outdoor Kitchens",
      description:
        "Luxury outdoor kitchen designs with professional countertops and entertainment setups",
    },
    {
      slug: "covered-patios",
      name: "Covered Patios",
      description:
        "Elegant covered patio designs with stone columns and premium finishes",
    },
    {
      slug: "fire-features",
      name: "Fire Features",
      description:
        "Custom fire pits, outdoor fireplaces, and fire feature installations",
    },
    {
      slug: "landscaping",
      name: "Landscaping",
      description:
        "Artificial turf, gardens, water features, and complete landscape design",
    },
    {
      slug: "ironwork",
      name: "Iron Work",
      description: "Decorative gates, railings, archways, and custom metalwork",
    },
  ];

  return categories.map((category) => ({
    params: { category: category.slug },
    props: { categoryInfo: category },
  }));
}

const { category } = Astro.params;
const { categoryInfo } = Astro.props;

// Map URL slugs to Sanity category values (ironwork vs iron-work)
const categorySlugMap: Record<string, string> = {
  ironwork: "iron-work",
};
const sanityCategory = categorySlugMap[category as string] || category;

// Fetch gallery items from Sanity, sorted by orderRank (drag-and-drop order)
const allGalleryItems = await sanityClient.fetch(
  `
  *[_type == "galleryItem" && category == $category] | order(orderRank asc) {
    _id,
    title,
    alt,
    category,
    subcategory,
    featured,
    isVideo,
    image,
    "fullImageUrl": image.asset->url,
    "playbackId": video.asset->playbackId,
    "thumbTime": video.asset->thumbTime,
    "aspectRatio": video.asset->data.aspect_ratio,
    thumbFocus
  }
`,
  { category: sanityCategory }
);

// Map Sanity data to the format the template expects
const galleryItems = allGalleryItems.map((item: any, index: number) => {
  // Step 1: Is this a video or photo?
  const isVideo = item.isVideo === true;
  const playbackId = item.playbackId;
  // thumbTime comes from Mux plugin's visual picker (stored on video asset)
  const thumbTime = item.thumbTime;
  // thumbFocus controls where to crop the thumbnail (auto = smartcrop, or top/center/bottom)
  const thumbFocus = item.thumbFocus || "auto";

  // Step 2: Get the thumbnail URL (different source for each type)
  let src = "";
  let fullSrc = "";

  if (isVideo && playbackId) {
    // VIDEO → Mux thumbnail
    const timeParam = typeof thumbTime === "number" ? `time=${thumbTime}` : "";

    if (thumbFocus === "auto") {
      // Use Mux smartcrop (default behavior)
      src = `https://image.mux.com/${playbackId}/thumbnail.jpg?width=1200&height=900&fit_mode=smartcrop${timeParam ? `&${timeParam}` : ""}`;
    } else {
      // Manual focus: get full thumbnail, CSS will handle the crop position
      src = `https://image.mux.com/${playbackId}/thumbnail.jpg?width=1200${timeParam ? `&${timeParam}` : ""}`;
    }
    fullSrc = `https://image.mux.com/${playbackId}/thumbnail.jpg`;
  } else if (item.image) {
    // PHOTO → Sanity image (same as before)
    src = urlFor(item.image).width(800).height(600).fit("crop").url();
    fullSrc = urlFor(item.image).url();
  }

  // Step 3: Generate animated preview URL for videos (Netflix-style hover effect)
  let animatedSrc = "";
  if (isVideo && playbackId) {
    // Mux animated WebP: smooth 4-second loop, 15fps for silky preview
    animatedSrc = `https://image.mux.com/${playbackId}/animated.webp?width=640&fps=15&start=0&end=4`;
  }

  // Step 4: Return the clean object
  return {
    src,
    fullSrc,
    animatedSrc,
    alt: item.alt,
    title: item.title,
    category: item.category,
    subcategory: item.subcategory || null,
    featured: item.featured || false,
    originalIndex: index,
    isVideo,
    playbackId: playbackId || null,
    thumbTime: thumbTime || null,
    aspectRatio: item.aspectRatio || null,
    thumbFocus,
  };
});

// Define subcategories for each category (matches Sanity schema values)
const categorySubcategories: Record<string, { slug: string; name: string }[]> =
  {
    concrete: [
      { slug: "walkways-steps", name: "Walkways & Steps" },
      { slug: "flatwork-patios", name: "Flatwork & Patios" },
      { slug: "driveways", name: "Driveways" },
      { slug: "stone-work", name: "Stone Work" },
    ],
    "fire-features": [
      { slug: "fire-pits", name: "Fire Pits" },
      { slug: "fire-pit-tables", name: "Fire Pit Tables" },
      { slug: "fireplaces", name: "Fireplaces" },
    ],
    landscaping: [
      { slug: "water-features", name: "Water Features" },
      { slug: "turf", name: "Artificial Turf" },
      { slug: "gardens", name: "Gardens & Lawns" },
    ],
  };

// Get subcategories for current category (if any)
const subcategories = categorySubcategories[category as string] || [];

// Breadcrumbs for this page
const breadcrumbs = [
  { label: "Gallery", href: "/gallery" },
  { label: categoryInfo.name, href: `/gallery/${category}` },
];
---

<GalleryLayout
  title={`${categoryInfo.name} — Rocky Concrete Portfolio`}
  description={`${categoryInfo.description} by Rocky Concrete in Bakersfield, CA.`}
  heroTitle={categoryInfo.name}
  heroDescription={categoryInfo.description}
  breadcrumbs={breadcrumbs}
>
  <!-- Category Navigation Bar -->
  <CategoryNav currentCategory={category} />

  <!-- Gallery Section - Full Width -->
  <section class="section-padding bg-white border-t border-bronze/10">
    <div class="max-w-[1400px] mx-auto px-6 md:px-8">
      <!-- Categories WITH subcategories - show subsections with bronze headers -->
      {
        subcategories.length > 0 ? (
          <div>
            {subcategories.map((subcat) => {
              const subcatItems = galleryItems.filter(
                (item) => item.subcategory === subcat.slug
              );
              if (subcatItems.length === 0) return null;

              return (
                <div
                  id={`${category}-${subcat.slug}`}
                  class="mb-12 scroll-mt-24"
                >
                  <h3 class="font-['Bebas_Neue'] text-2xl tracking-wider text-charcoal mb-4 flex items-center">
                    <span class="w-1 h-6 bg-bronze mr-3" />
                    {subcat.name}
                  </h3>
                  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
                    {subcatItems.map((item, index) => (
                      <article
                        class="gallery-item group cursor-pointer overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 border-2 border-transparent hover:border-bronze"
                        data-index={galleryItems.indexOf(item)}
                        data-full-src={item.fullSrc}
                        data-is-video={item.isVideo}
                        data-playback-id={item.playbackId || ""}
                        data-aspect-ratio={item.aspectRatio || ""}
                        data-animated-src={item.animatedSrc || ""}
                      >
                        <div class="relative overflow-hidden aspect-[4/3] bg-charcoal-light">
                          <img
                            src={item.src}
                            alt={item.alt}
                            class="w-full h-full object-cover transition-all duration-500 group-hover:scale-105 group-hover:brightness-75"
                            style={item.thumbFocus !== "auto" ? `object-position: ${item.thumbFocus}` : undefined}
                            loading={index < 3 ? "eager" : "lazy"}
                            width="800"
                            height="600"
                          />
                          {/* Video play indicator - luxury minimal design */}
                          {item.isVideo && (
                            <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
                              {/* Subtle backdrop pulse */}
                              <div class="absolute w-20 h-20 md:w-24 md:h-24 rounded-full bg-bronze/20 animate-pulse-slow"></div>
                              {/* Main play button */}
                              <div class="video-play-indicator relative w-14 h-14 md:w-16 md:h-16 rounded-full bg-black/50 backdrop-blur-md flex items-center justify-center border border-white/30 group-hover:bg-bronze group-hover:border-bronze group-hover:scale-105 transition-all duration-500 shadow-2xl">
                                <svg class="w-5 h-5 md:w-6 md:h-6 text-white ml-0.5" fill="currentColor" viewBox="0 0 24 24">
                                  <path d="M8 5v14l11-7z"/>
                                </svg>
                              </div>
                            </div>
                          )}
                          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-black/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            <div class="absolute bottom-6 left-6 right-6">
                              <p class="text-white font-light text-sm md:text-base tracking-wide">
                                {item.alt}
                              </p>
                            </div>
                          </div>
                        </div>
                      </article>
                    ))}
                  </div>
                </div>
              );
            })}
          </div>
        ) : (
          // Categories WITHOUT subcategories - simple grid like original
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
            {galleryItems.map((item, index) => (
              <article
                class="gallery-item group cursor-pointer overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 border-2 border-transparent hover:border-bronze"
                data-index={index}
                data-full-src={item.fullSrc}
                data-is-video={item.isVideo}
                data-playback-id={item.playbackId || ""}
                data-aspect-ratio={item.aspectRatio || ""}
                data-animated-src={item.animatedSrc || ""}
              >
                <div class="relative overflow-hidden aspect-[4/3] bg-charcoal-light">
                  <img
                    src={item.src}
                    alt={item.alt}
                    class="w-full h-full object-cover transition-all duration-500 group-hover:scale-105 group-hover:brightness-75"
                    style={item.thumbFocus !== "auto" ? `object-position: ${item.thumbFocus}` : undefined}
                    loading={index < 6 ? "eager" : "lazy"}
                    width="800"
                    height="600"
                  />
                  {/* Video play indicator - luxury minimal design */}
                  {item.isVideo && (
                    <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
                      {/* Subtle backdrop pulse */}
                      <div class="absolute w-20 h-20 md:w-24 md:h-24 rounded-full bg-bronze/20 animate-pulse-slow"></div>
                      {/* Main play button */}
                      <div class="video-play-indicator relative w-14 h-14 md:w-16 md:h-16 rounded-full bg-black/50 backdrop-blur-md flex items-center justify-center border border-white/30 group-hover:bg-bronze group-hover:border-bronze group-hover:scale-105 transition-all duration-500 shadow-2xl">
                        <svg class="w-5 h-5 md:w-6 md:h-6 text-white ml-0.5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M8 5v14l11-7z"/>
                        </svg>
                      </div>
                    </div>
                  )}
                  <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-black/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <div class="absolute bottom-6 left-6 right-6">
                      <p class="text-white font-light text-sm md:text-base tracking-wide">
                        {item.alt}
                      </p>
                    </div>
                  </div>
                </div>
              </article>
            ))}
          </div>
        )
      }
    </div>
  </section>

  <!-- Lightbox Modal -->
  <div
    id="lightbox"
    role="dialog"
    aria-modal="true"
    aria-label="Image gallery lightbox"
    class="fixed inset-0 bg-black/95 z-[9999] hidden items-center justify-center p-4 opacity-0 transition-opacity duration-300"
  >
    <button
      id="lightbox-close"
      class="absolute top-4 right-4 text-white hover:text-gray-300 transition-colors z-10"
      aria-label="Close lightbox"
    >
      <svg
        class="w-10 h-10"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <button
      id="lightbox-prev"
      class="absolute left-4 text-white hover:text-gray-300 transition-colors z-10 bg-white/10 hover:bg-white/20 rounded-full p-3"
      aria-label="Previous image"
    >
      <svg
        class="w-8 h-8"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M15 19l-7-7 7-7"></path>
      </svg>
    </button>

    <button
      id="lightbox-next"
      class="absolute right-4 text-white hover:text-gray-300 transition-colors z-10 bg-white/10 hover:bg-white/20 rounded-full p-3"
      aria-label="Next image"
    >
      <svg
        class="w-8 h-8"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 5l7 7-7 7"></path>
      </svg>
    </button>

    <div
      class="max-w-7xl max-h-[85vh] w-full h-full flex items-center justify-center px-4"
    >
      <img
        id="lightbox-image"
        src=""
        alt=""
        class="max-w-full max-h-full object-contain opacity-0 scale-95 transition-all duration-300"
      />
    </div>

    <div
      class="absolute bottom-8 left-1/2 -translate-x-1/2 text-white text-center"
    >
      <p id="lightbox-caption" class="text-lg font-light mb-2 text-slate-light">
      </p>
      <p id="lightbox-counter" class="text-sm text-slate-light"></p>
    </div>
  </div>

  <!-- Back to Top Button -->
  <button
    id="back-to-top"
    class="fixed bottom-8 right-8 bg-bronze text-white p-4 rounded-full shadow-2xl hover:bg-bronze-dark transition-all duration-300 opacity-0 pointer-events-none z-50 hover:scale-110 cursor-pointer"
    aria-label="Back to top"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
    </svg>
  </button>
</GalleryLayout>

<script>
  // Load Mux Player - handles HLS streaming in ALL browsers
  import("@mux/mux-player");

  // Constants
  const SCROLL_THRESHOLD_BACK_TO_TOP = 300;
  const LIGHTBOX_TRANSITION_DELAY = 10;
  const LIGHTBOX_CLOSE_DELAY = 300;

  const backToTopBtn = document.getElementById("back-to-top");

  // Back to top button visibility on scroll
  function handleScroll() {
    const scrollY = window.scrollY;

    if (backToTopBtn) {
      if (scrollY > SCROLL_THRESHOLD_BACK_TO_TOP) {
        backToTopBtn.classList.remove("opacity-0", "pointer-events-none");
        backToTopBtn.classList.add("opacity-100");
      } else {
        backToTopBtn.classList.add("opacity-0", "pointer-events-none");
        backToTopBtn.classList.remove("opacity-100");
      }
    }
  }

  window.addEventListener("scroll", handleScroll);

  // Back to top button click
  if (backToTopBtn) {
    backToTopBtn.addEventListener("click", () => {
      window.scrollTo({ top: 0, behavior: "smooth" });
    });
  }

  // Lightbox functionality
  const lightbox = document.getElementById("lightbox");
  const lightboxImage = document.getElementById(
    "lightbox-image"
  ) as HTMLImageElement;
  const lightboxCaption = document.getElementById("lightbox-caption");
  const lightboxCounter = document.getElementById("lightbox-counter");
  const lightboxClose = document.getElementById("lightbox-close");
  const lightboxPrev = document.getElementById("lightbox-prev");
  const lightboxNext = document.getElementById("lightbox-next");
  const galleryItems = document.querySelectorAll(".gallery-item");

  let currentLightboxIndex = 0;
  let currentMuxPlayer: HTMLElement | null = null;

  // Clean up any existing mux-player
  function cleanupVideoPlayer() {
    if (currentMuxPlayer) {
      (currentMuxPlayer as any).pause?.();
      currentMuxPlayer.remove();
      currentMuxPlayer = null;
    }
  }

  function openLightbox(index: number) {
    currentLightboxIndex = index;

    const item = galleryItems[currentLightboxIndex];
    if (!item) return;

    const img = item.querySelector("img");
    const fullSrc = item.getAttribute("data-full-src");

    const isVideo = item.getAttribute("data-is-video") === "true";
    const playbackId = item.getAttribute("data-playback-id");
    const aspectRatio = item.getAttribute("data-aspect-ratio");

    if (
      !img ||
      !lightbox ||
      !lightboxImage ||
      !lightboxCaption ||
      !lightboxCounter
    )
      return;

    // Clean up any previous video
    cleanupVideoPlayer();

    if (isVideo && playbackId) {
      // VIDEO: Hide image, create mux-player as sibling with SAME styling
      lightboxImage.classList.add("hidden");

      const muxPlayer = document.createElement("mux-player");
      muxPlayer.setAttribute("playback-id", playbackId);
      muxPlayer.setAttribute("stream-type", "on-demand");

      // Mobile-critical attributes
      muxPlayer.setAttribute("playsinline", ""); // Required for iOS inline playback
      muxPlayer.setAttribute("preload", "metadata"); // Help mobile load faster

      // Luxury industrial theme - sophisticated dark controls
      muxPlayer.setAttribute("accent-color", "#B8860B"); // Bronze accent for progress/hover
      muxPlayer.setAttribute("primary-color", "#FFFFFF"); // White text and icons
      muxPlayer.setAttribute("secondary-color", "rgba(10, 10, 10, 0.92)"); // Dark charcoal controls background
      muxPlayer.setAttribute("default-hidden-captions", ""); // Hide captions by default

      // Enhanced theming with CSS variables
      muxPlayer.style.setProperty("--controls-background", "rgba(10, 10, 10, 0.92)");
      muxPlayer.style.setProperty("--controls-hover-background", "rgba(26, 26, 26, 0.95)");

      // Set aspect ratio from Mux (format "16:9" -> "16 / 9")
      if (aspectRatio) {
        const cssAspectRatio = aspectRatio.replace(":", " / ");
        muxPlayer.style.aspectRatio = cssAspectRatio;
      }

      // CRITICAL: Set ALL sizing styles BEFORE inserting to prevent flash/resize
      // Constrain to container while maintaining aspect ratio
      muxPlayer.style.maxWidth = "100%";
      muxPlayer.style.maxHeight = "100%";
      muxPlayer.style.width = "auto";
      muxPlayer.style.height = "auto";
      muxPlayer.style.setProperty("--media-object-fit", "contain");

      // Start visible on mobile - don't wait for events that may not fire
      muxPlayer.style.visibility = "visible";
      muxPlayer.style.opacity = "1";

      // Insert as sibling right after the image (same parent, same level)
      lightboxImage.insertAdjacentElement("afterend", muxPlayer);
      currentMuxPlayer = muxPlayer;
    } else {
      // IMAGE: Show image
      lightboxImage.classList.remove("hidden");
      lightboxImage.src = fullSrc || img.src;
      lightboxImage.alt = img.alt;
    }

    lightboxCaption.textContent = img.alt;
    lightboxCounter.textContent = `${currentLightboxIndex + 1} / ${galleryItems.length}`;

    lightbox.classList.remove("hidden");
    lightbox.classList.add("flex");
    document.body.style.overflow = "hidden";

    // Trigger fade-in animation
    setTimeout(() => {
      lightbox.classList.remove("opacity-0");
      lightbox.classList.add("opacity-100");
      lightboxImage.classList.remove("opacity-0", "scale-95");
      lightboxImage.classList.add("opacity-100", "scale-100");
      lightboxClose?.focus();
    }, LIGHTBOX_TRANSITION_DELAY);
  }

  function closeLightbox() {
    if (!lightbox || !lightboxImage) return;

    // Clean up video player
    cleanupVideoPlayer();

    lightbox.classList.remove("opacity-100");
    lightbox.classList.add("opacity-0");
    lightboxImage.classList.remove("opacity-100", "scale-100");
    lightboxImage.classList.add("opacity-0", "scale-95");

    setTimeout(() => {
      lightbox.classList.add("hidden");
      lightbox.classList.remove("flex");
      document.body.style.overflow = "";
    }, LIGHTBOX_CLOSE_DELAY);
  }

  function nextImage() {
    currentLightboxIndex = (currentLightboxIndex + 1) % galleryItems.length;
    openLightbox(currentLightboxIndex);
  }

  function prevImage() {
    currentLightboxIndex =
      currentLightboxIndex === 0
        ? galleryItems.length - 1
        : currentLightboxIndex - 1;
    openLightbox(currentLightboxIndex);
  }

  // Gallery item clicks and keyboard accessibility
  galleryItems.forEach((item, index) => {
    item.setAttribute("tabindex", "0");
    item.setAttribute("role", "button");

    item.addEventListener("click", () => {
      openLightbox(index);
    });

    item.addEventListener("keydown", (e: Event) => {
      const keyboardEvent = e as KeyboardEvent;
      if (keyboardEvent.key === "Enter" || keyboardEvent.key === " ") {
        keyboardEvent.preventDefault();
        openLightbox(index);
      }
    });

    // Video hover preview - Netflix-style animated thumbnail
    const isVideo = item.getAttribute("data-is-video") === "true";
    const animatedSrc = item.getAttribute("data-animated-src");

    if (isVideo && animatedSrc) {
      const img = item.querySelector("img") as HTMLImageElement;
      if (!img) return;

      const staticSrc = img.src;
      let preloadedAnimated: HTMLImageElement | null = null;

      // Preload animated WebP on first hover for instant swap
      item.addEventListener("mouseenter", () => {
        if (!preloadedAnimated) {
          preloadedAnimated = new Image();
          preloadedAnimated.src = animatedSrc;
        }
        // Swap to animated preview
        img.src = animatedSrc;
        img.classList.add("video-preview-active");
      });

      item.addEventListener("mouseleave", () => {
        // Swap back to static thumbnail
        img.src = staticSrc;
        img.classList.remove("video-preview-active");
      });
    }
  });

  // Lightbox controls
  lightboxClose?.addEventListener("click", closeLightbox);
  lightboxNext?.addEventListener("click", nextImage);
  lightboxPrev?.addEventListener("click", prevImage);

  // Close on background click
  lightbox?.addEventListener("click", (e) => {
    if (e.target === lightbox) {
      closeLightbox();
    }
  });

  // Keyboard navigation
  document.addEventListener("keydown", (e) => {
    if (!lightbox?.classList.contains("hidden")) {
      if (e.key === "Escape") closeLightbox();
      if (e.key === "ArrowRight") nextImage();
      if (e.key === "ArrowLeft") prevImage();
    }
  });

  // Subcategory dropdown scroll functionality
  const HEADER_OFFSET = 120;
  const subcatScrollBtns = document.querySelectorAll(".subcat-scroll-btn");

  subcatScrollBtns.forEach((btn) => {
    btn.addEventListener("click", () => {
      const targetId = btn.getAttribute("data-target");
      if (targetId) {
        const target = document.getElementById(targetId);
        if (target) {
          const targetPosition =
            target.getBoundingClientRect().top +
            window.pageYOffset -
            HEADER_OFFSET;
          window.scrollTo({ top: targetPosition, behavior: "smooth" });
        }
      }
    });
  });
</script>

<style>
  /* Hide scrollbar for category nav */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  /* Video play indicator - luxury refinement */
  .video-play-indicator {
    box-shadow:
      0 4px 20px rgba(0, 0, 0, 0.4),
      0 0 0 1px rgba(255, 255, 255, 0.1) inset;
  }

  /* Subtle pulse animation for play button backdrop */
  @keyframes pulse-slow {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.15;
      transform: scale(1.15);
    }
  }

  .animate-pulse-slow {
    animation: pulse-slow 3s ease-in-out infinite;
  }

  /* Mux player - luxury industrial styling */
  mux-player {
    border-radius: 0; /* Sharp edges = industrial */
    box-shadow:
      0 8px 40px rgba(0, 0, 0, 0.6),
      0 0 0 1px rgba(184, 134, 11, 0.15); /* Subtle bronze border */
    /* Fade-in handled by JavaScript on loadedmetadata event for smooth loading */
  }

