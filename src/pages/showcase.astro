<Layout
  title="Our Work â€” Rocky Concrete Portfolio & Project Gallery"
  description="Explore Rocky Concrete's portfolio of completed projects including concrete work, outdoor kitchens, fire pits, pool remodels, and landscaping in Bakersfield, CA."
>
  <Header />

  <main class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
    <!-- Hero Section -->
    <section class="pt-32 pb-16 bg-gradient-to-br from-[#818181] to-[#454545]">
      <div class="container max-w-7xl mx-auto px-6 md:px-8 text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4">
          Our Showcase
        </h1>
        <p class="text-lg md:text-xl text-gray-200 max-w-3xl mx-auto">
          Browse through our portfolio of completed projects. Each piece
          represents our commitment to quality craftsmanship and customer
          satisfaction.
        </p>
      </div>
    </section>

    <!-- Gallery Section with Sidebar -->
    <section class="py-16 md:py-24">
      <div class="max-w-[1400px] mx-auto px-8">
        <!-- Filter Controls -->
        <div class="mb-12">
          <!-- Main Category Buttons -->
          <div class="flex flex-wrap justify-center gap-3 mb-4">
            <button
              class="category-btn px-6 py-3 rounded-full font-medium transition-all duration-300 bg-primary text-white shadow-lg hover:bg-primary-dark active"
              data-category="all"
            >
              All Projects
            </button>
            <!-- Concrete Dropdown -->
            <div class="relative concrete-dropdown-wrapper">
              <button
                id="concrete-dropdown-btn"
                class="category-btn concrete-main-btn px-6 py-3 rounded-full font-medium transition-all duration-300 bg-white text-gray-700 border-2 border-gray-200 hover:border-primary hover:text-primary flex items-center gap-2"
                data-category="concrete"
                data-type="all"
              >
                Concrete
                <svg id="concrete-dropdown-icon" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              <!-- Dropdown Menu -->
              <div id="concrete-dropdown-menu" class="absolute top-full mt-2 hidden bg-white border-2 border-gray-200 rounded-lg shadow-lg min-w-[200px] z-10">
                <button
                  class="concrete-type-btn w-full px-4 py-2 text-left text-sm font-medium text-gray-700 hover:bg-gray-50 hover:text-primary transition-colors first:rounded-t-lg"
                  data-category="concrete"
                  data-type="all"
                >
                  All Concrete
                </button>
                <button
                  class="concrete-type-btn w-full px-4 py-2 text-left text-sm font-medium text-gray-700 hover:bg-gray-50 hover:text-primary transition-colors"
                  data-category="concrete"
                  data-type="driveways"
                >
                  Driveways
                </button>
                <button
                  class="concrete-type-btn w-full px-4 py-2 text-left text-sm font-medium text-gray-700 hover:bg-gray-50 hover:text-primary transition-colors"
                  data-category="concrete"
                  data-type="stairs"
                >
                  Steps & Stairs
                </button>
                <button
                  class="concrete-type-btn w-full px-4 py-2 text-left text-sm font-medium text-gray-700 hover:bg-gray-50 hover:text-primary transition-colors"
                  data-category="concrete"
                  data-type="patios"
                >
                  Patios & Flatwork
                </button>
                <button
                  class="concrete-type-btn w-full px-4 py-2 text-left text-sm font-medium text-gray-700 hover:bg-gray-50 hover:text-primary transition-colors last:rounded-b-lg"
                  data-category="concrete"
                  data-type="walkways"
                >
                  Walkways
                </button>
              </div>
            </div>
            <button
              class="category-btn px-6 py-3 rounded-full font-medium transition-all duration-300 bg-white text-gray-700 border-2 border-gray-200 hover:border-primary hover:text-primary"
              data-category="backyard-remodels"
            >
              Backyard Remodels
            </button>
            <button
              class="category-btn px-6 py-3 rounded-full font-medium transition-all duration-300 bg-white text-gray-700 border-2 border-gray-200 hover:border-primary hover:text-primary"
              data-category="landscape"
            >
              Landscape
            </button>
            <button
              class="category-btn px-6 py-3 rounded-full font-medium transition-all duration-300 bg-white text-gray-700 border-2 border-gray-200 hover:border-primary hover:text-primary"
              data-category="patio"
            >
              Patio
            </button>
            <button
              class="category-btn px-6 py-3 rounded-full font-medium transition-all duration-300 bg-white text-gray-700 border-2 border-gray-200 hover:border-primary hover:text-primary"
              data-category="iron-work"
            >
              Iron Work
            </button>
            <button
              class="category-btn px-6 py-3 rounded-full font-medium transition-all duration-300 bg-white text-gray-700 border-2 border-gray-200 hover:border-primary hover:text-primary opacity-50 cursor-not-allowed"
              data-category="chimneys"
              disabled
            >
              Chimneys <span class="text-xs">(Coming Soon)</span>
            </button>
          </div>

          <!-- Finish Filter (for Concrete) - Below categories, right aligned -->
          <div
            class="hidden justify-end items-center gap-2 mb-4"
            id="concrete-finish-filter"
          >
            <span class="text-xs text-gray-500">Finish:</span>
            <button
              class="finish-btn px-3 py-1 rounded-md text-xs font-medium transition-all duration-200 bg-gray-100 text-gray-600 hover:bg-primary hover:text-white"
              data-finish="stamped"
            >
              Stamped
            </button>
            <button
              class="finish-btn px-3 py-1 rounded-md text-xs font-medium transition-all duration-200 bg-gray-100 text-gray-600 hover:bg-primary hover:text-white"
              data-finish="stained"
            >
              Stained
            </button>
            <button
              class="finish-btn px-3 py-1 rounded-md text-xs font-medium transition-all duration-200 bg-gray-100 text-gray-600 hover:bg-primary hover:text-white"
              data-finish="aggregate"
            >
              Aggregate
            </button>
            <button
              class="finish-btn px-3 py-1 rounded-md text-xs font-medium transition-all duration-200 bg-gray-100 text-gray-600 hover:bg-primary hover:text-white"
              data-finish="regular"
            >
              Regular
            </button>
          </div>

          <!-- Project Counter -->
          <div class="text-center mt-6">
            <p class="text-gray-600 font-medium" id="project-counter">
              Showing <span id="visible-count">{galleryItems.length}</span> of <span
                id="total-count">{galleryItems.length}</span
              > projects
            </p>
          </div>
        </div>

        <!-- Sidebar + Gallery Layout -->
        <div class="flex gap-8 items-start">
          <!-- Sidebar -->
          <aside class="hidden lg:block sticky top-24 w-64 shrink-0 self-start">
            <div class="bg-white rounded-lg shadow-lg p-6">
              <h2 class="text-xl font-bold text-gray-800 mb-6 pb-3 border-b-2 border-primary">
                Categories
              </h2>
              <nav>
                <ul class="space-y-2">
                  <li>
                    <button
                      class="sidebar-category-btn w-full text-left px-4 py-2.5 rounded-lg transition-all duration-200 bg-primary text-white font-medium"
                      data-category="all"
                    >
                      All Projects
                    </button>
                  </li>
                  <li>
                    <button
                      class="sidebar-category-btn w-full text-left px-4 py-2.5 rounded-lg transition-all duration-200 text-gray-700 hover:bg-gray-100 hover:text-primary"
                      data-category="concrete"
                    >
                      Concrete
                    </button>
                  </li>
                  <li>
                    <button
                      class="sidebar-category-btn w-full text-left px-4 py-2.5 rounded-lg transition-all duration-200 text-gray-700 hover:bg-gray-100 hover:text-primary"
                      data-category="backyard-remodels"
                    >
                      Backyard Remodels
                    </button>
                  </li>
                  <li>
                    <button
                      class="sidebar-category-btn w-full text-left px-4 py-2.5 rounded-lg transition-all duration-200 text-gray-700 hover:bg-gray-100 hover:text-primary"
                      data-category="landscape"
                    >
                      Landscape
                    </button>
                  </li>
                  <li>
                    <button
                      class="sidebar-category-btn w-full text-left px-4 py-2.5 rounded-lg transition-all duration-200 text-gray-700 hover:bg-gray-100 hover:text-primary"
                      data-category="patio"
                    >
                      Covered Patios
                    </button>
                  </li>
                  <li>
                    <button
                      class="sidebar-category-btn w-full text-left px-4 py-2.5 rounded-lg transition-all duration-200 text-gray-700 hover:bg-gray-100 hover:text-primary"
                      data-category="iron-work"
                    >
                      Iron Work
                    </button>
                  </li>
                  <li>
                    <button
                      class="sidebar-category-btn w-full text-left px-4 py-2.5 rounded-lg transition-all duration-200 text-gray-400 cursor-not-allowed opacity-50"
                      data-category="chimneys"
                      disabled
                    >
                      Chimneys <span class="text-xs">(Soon)</span>
                    </button>
                  </li>
                </ul>
              </nav>

              <!-- Concrete Sub-filters (shown when Concrete is selected) -->
              <div id="sidebar-concrete-filters" class="hidden mt-6 pt-6 border-t border-gray-200">
                <h3 class="text-sm font-semibold text-gray-700 mb-3">Concrete Type</h3>
                <ul class="space-y-1.5 mb-4">
                  <li>
                    <button
                      class="sidebar-type-btn w-full text-left px-3 py-1.5 rounded text-sm transition-all duration-200 text-gray-600 hover:bg-gray-100 hover:text-primary"
                      data-category="concrete"
                      data-type="all"
                    >
                      All Concrete
                    </button>
                  </li>
                  <li>
                    <button
                      class="sidebar-type-btn w-full text-left px-3 py-1.5 rounded text-sm transition-all duration-200 text-gray-600 hover:bg-gray-100 hover:text-primary"
                      data-category="concrete"
                      data-type="driveways"
                    >
                      Driveways
                    </button>
                  </li>
                  <li>
                    <button
                      class="sidebar-type-btn w-full text-left px-3 py-1.5 rounded text-sm transition-all duration-200 text-gray-600 hover:bg-gray-100 hover:text-primary"
                      data-category="concrete"
                      data-type="stairs"
                    >
                      Steps & Stairs
                    </button>
                  </li>
                  <li>
                    <button
                      class="sidebar-type-btn w-full text-left px-3 py-1.5 rounded text-sm transition-all duration-200 text-gray-600 hover:bg-gray-100 hover:text-primary"
                      data-category="concrete"
                      data-type="patios"
                    >
                      Patios & Flatwork
                    </button>
                  </li>
                  <li>
                    <button
                      class="sidebar-type-btn w-full text-left px-3 py-1.5 rounded text-sm transition-all duration-200 text-gray-600 hover:bg-gray-100 hover:text-primary"
                      data-category="concrete"
                      data-type="walkways"
                    >
                      Walkways
                    </button>
                  </li>
                </ul>

                <h3 class="text-sm font-semibold text-gray-700 mb-3">Finish Type</h3>
                <ul class="space-y-1.5">
                  <li>
                    <button
                      class="sidebar-finish-btn w-full text-left px-3 py-1.5 rounded text-sm transition-all duration-200 text-gray-600 hover:bg-gray-100 hover:text-primary"
                      data-finish="stamped"
                    >
                      Stamped
                    </button>
                  </li>
                  <li>
                    <button
                      class="sidebar-finish-btn w-full text-left px-3 py-1.5 rounded text-sm transition-all duration-200 text-gray-600 hover:bg-gray-100 hover:text-primary"
                      data-finish="stained"
                    >
                      Stained
                    </button>
                  </li>
                  <li>
                    <button
                      class="sidebar-finish-btn w-full text-left px-3 py-1.5 rounded text-sm transition-all duration-200 text-gray-600 hover:bg-gray-100 hover:text-primary"
                      data-finish="aggregate"
                    >
                      Aggregate
                    </button>
                  </li>
                  <li>
                    <button
                      class="sidebar-finish-btn w-full text-left px-3 py-1.5 rounded text-sm transition-all duration-200 text-gray-600 hover:bg-gray-100 hover:text-primary"
                      data-finish="regular"
                    >
                      Regular
                    </button>
                  </li>
                </ul>
              </div>

              <!-- Project Counter in Sidebar -->
              <div class="mt-6 pt-6 border-t border-gray-200">
                <p class="text-sm text-gray-600 text-center">
                  <span class="font-semibold text-gray-800" id="sidebar-visible-count">{galleryItems.length}</span>
                  <span class="text-gray-500"> of </span>
                  <span class="font-semibold text-gray-800" id="sidebar-total-count">{galleryItems.length}</span>
                  <br />
                  <span class="text-xs text-gray-500">projects</span>
                </p>
              </div>
            </div>
          </aside>

          <!-- Gallery Grid -->
          <div class="flex-1 min-w-0">
        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8"
          id="gallery-grid"
        >
          {
            galleryItems.map((item, index) => (
              <article
                class="gallery-item group cursor-pointer overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2"
                data-category={item.category}
                data-type={item.type || ""}
                data-finish={item.finish || ""}
                data-index={index}
              >
                <div class="relative overflow-hidden aspect-[4/3] bg-gray-100">
                  <img
                    src={item.src}
                    alt={item.alt}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                    loading={index < 6 ? "eager" : "lazy"}
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/0 to-black/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <div class="absolute bottom-4 left-4 right-4">
                      <p class="text-white font-medium text-sm md:text-base">
                        {item.alt}
                      </p>
                    </div>
                  </div>
                  <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <div class="bg-white/90 rounded-full p-4 transform scale-0 group-hover:scale-100 transition-transform duration-300">
                      <svg
                        class="w-6 h-6 text-primary"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v6m3-3H7"
                        />
                      </svg>
                    </div>
                  </div>
                </div>
              </article>
            ))
          }
        </div>

        <!-- Empty State -->
        <div class="hidden text-center py-20" id="empty-state">
          <div class="text-gray-400 mb-4">
            <svg
              class="w-20 h-20 mx-auto"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <h3 class="text-2xl font-semibold text-gray-700 mb-2">
            No projects found
          </h3>
          <p class="text-gray-500">Try selecting a different category</p>
        </div>
        </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-gradient-to-br from-[#818181] to-[#454545]">
      <div class="container max-w-4xl mx-auto px-6 md:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Ready to Start Your Project?
        </h2>
        <p class="text-lg text-gray-200 mb-8">
          Let us transform your outdoor space with quality craftsmanship and
          exceptional service.
        </p>
        <a
          href="/#cta"
          class="inline-block bg-white text-primary px-8 py-4 rounded-full font-semibold text-lg shadow-xl hover:bg-gray-100 transition-all duration-300 hover:scale-105"
        >
          Get Your Free Estimate
        </a>
      </div>
    </section>
  </main>

  <!-- Lightbox Modal -->
  <div
    id="lightbox"
    class="fixed inset-0 bg-black/95 z-[9999] hidden items-center justify-center p-4"
  >
    <button
      id="lightbox-close"
      class="absolute top-4 right-4 text-white hover:text-gray-300 transition-colors z-10"
      aria-label="Close lightbox"
    >
      <svg
        class="w-10 h-10"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <button
      id="lightbox-prev"
      class="absolute left-4 text-white hover:text-gray-300 transition-colors z-10 bg-white/10 hover:bg-white/20 rounded-full p-3"
      aria-label="Previous image"
    >
      <svg
        class="w-8 h-8"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M15 19l-7-7 7-7"></path>
      </svg>
    </button>

    <button
      id="lightbox-next"
      class="absolute right-4 text-white hover:text-gray-300 transition-colors z-10 bg-white/10 hover:bg-white/20 rounded-full p-3"
      aria-label="Next image"
    >
      <svg
        class="w-8 h-8"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 5l7 7-7 7"></path>
      </svg>
    </button>

    <div
      class="max-w-7xl max-h-[90vh] w-full h-full flex items-center justify-center"
    >
      <img
        id="lightbox-image"
        src=""
        alt=""
        class="max-w-full max-h-full object-contain"
      />
    </div>

    <div
      class="absolute bottom-8 left-1/2 -translate-x-1/2 text-white text-center"
    >
      <p id="lightbox-caption" class="text-lg font-medium mb-2"></p>
      <p id="lightbox-counter" class="text-sm text-gray-300"></p>
    </div>
  </div>

  <Footer />
</Layout>

<script>
  // Gallery filtering
  const categoryBtns = document.querySelectorAll(".category-btn");
  const finishBtns = document.querySelectorAll(".finish-btn");
  const galleryItems = document.querySelectorAll(".gallery-item");
  const emptyState = document.getElementById("empty-state");
  const visibleCount = document.getElementById("visible-count");
  const totalCount = document.getElementById("total-count");
  const concreteFinishFilter = document.getElementById(
    "concrete-finish-filter"
  );
  const concreteTypeBtns = document.querySelectorAll(".concrete-type-btn");
  const concreteDropdownBtn = document.getElementById("concrete-dropdown-btn");
  const concreteDropdownMenu = document.getElementById("concrete-dropdown-menu");
  const concreteDropdownIcon = document.getElementById("concrete-dropdown-icon");

  // Sidebar elements
  const sidebarCategoryBtns = document.querySelectorAll(".sidebar-category-btn");
  const sidebarTypeBtns = document.querySelectorAll(".sidebar-type-btn");
  const sidebarFinishBtns = document.querySelectorAll(".sidebar-finish-btn");
  const sidebarConcreteFilters = document.getElementById("sidebar-concrete-filters");
  const sidebarVisibleCount = document.getElementById("sidebar-visible-count");
  const sidebarTotalCount = document.getElementById("sidebar-total-count");

  let currentCategory = "all";
  let currentType = "all";
  let selectedFinishes: string[] = [];

  // Dropdown toggle functionality (click-based, not hover)
  concreteDropdownBtn?.addEventListener("click", (e) => {
    e.stopPropagation();
    const isOpen = !concreteDropdownMenu?.classList.contains("hidden");

    if (isOpen) {
      concreteDropdownMenu?.classList.add("hidden");
      concreteDropdownIcon?.classList.remove("rotate-180");
    } else {
      concreteDropdownMenu?.classList.remove("hidden");
      concreteDropdownIcon?.classList.add("rotate-180");
    }
  });

  // Close dropdown when clicking outside
  document.addEventListener("click", (e) => {
    const target = e.target as HTMLElement;
    if (!target.closest(".concrete-dropdown-wrapper")) {
      concreteDropdownMenu?.classList.add("hidden");
      concreteDropdownIcon?.classList.remove("rotate-180");
    }
  });

  function filterGallery() {
    let visibleItems = 0;

    galleryItems.forEach((item) => {
      const itemCategory = item.getAttribute("data-category");
      const itemType = item.getAttribute("data-type");
      const itemFinish = item.getAttribute("data-finish");

      let shouldShow = false;

      if (currentCategory === "all") {
        shouldShow = true;
      } else if (currentCategory === itemCategory) {
        // For concrete category, check type and finish
        if (currentCategory === "concrete") {
          const typeMatch = currentType === "all" || currentType === itemType;
          // Show item if no finishes selected, or if item's finish is in selected finishes
          const finishMatch = selectedFinishes.length === 0 || selectedFinishes.includes(itemFinish);
          shouldShow = typeMatch && finishMatch;
        } else {
          // For other categories, just show if category matches
          shouldShow = true;
        }
      }

      if (shouldShow) {
        item.classList.remove("hidden");
        item.classList.add("animate-fade-in");
        visibleItems++;
      } else {
        item.classList.add("hidden");
        item.classList.remove("animate-fade-in");
      }
    });

    // Update counter
    if (visibleCount && totalCount) {
      visibleCount.textContent = visibleItems.toString();
    }
    if (sidebarVisibleCount) {
      sidebarVisibleCount.textContent = visibleItems.toString();
    }

    // Show/hide empty state
    if (emptyState) {
      if (visibleItems === 0) {
        emptyState.classList.remove("hidden");
      } else {
        emptyState.classList.add("hidden");
      }
    }
  }

  // Category button clicks
  categoryBtns.forEach((btn) => {
    btn.addEventListener("click", () => {
      // Skip if disabled
      if (btn.hasAttribute("disabled")) return;

      // Remove active class from all category buttons
      categoryBtns.forEach((b) => {
        b.classList.remove("active", "bg-primary", "text-white", "shadow-lg");
        b.classList.add(
          "bg-white",
          "text-gray-700",
          "border-2",
          "border-gray-200"
        );
      });

      // Add active class to clicked button
      btn.classList.add("active", "bg-primary", "text-white", "shadow-lg");
      btn.classList.remove(
        "bg-white",
        "text-gray-700",
        "border-2",
        "border-gray-200"
      );

      currentCategory = btn.getAttribute("data-category") || "all";
      currentType = btn.getAttribute("data-type") || "all";
      selectedFinishes = [];

      // Show/hide concrete finish filter
      if (concreteFinishFilter) {
        if (currentCategory === "concrete") {
          concreteFinishFilter.classList.remove("hidden");
          concreteFinishFilter.classList.add("flex");

          // Reset finish buttons
          finishBtns.forEach((finishBtn) => {
            finishBtn.classList.remove(
              "active",
              "bg-primary",
              "text-white",
              "border-primary"
            );
            finishBtn.classList.add("bg-gray-100", "text-gray-600", "border-gray-300");
          });
        } else {
          concreteFinishFilter.classList.add("hidden");
          concreteFinishFilter.classList.remove("flex");
        }
      }

      filterGallery();
    });
  });

  // Concrete type dropdown button clicks
  concreteTypeBtns.forEach((btn) => {
    btn.addEventListener("click", () => {
      currentCategory = "concrete";
      currentType = btn.getAttribute("data-type") || "all";
      selectedFinishes = [];

      // Close the dropdown
      concreteDropdownMenu?.classList.add("hidden");
      concreteDropdownIcon?.classList.remove("rotate-180");

      // Update main category buttons
      categoryBtns.forEach((b) => {
        b.classList.remove("active", "bg-primary", "text-white", "shadow-lg");
        b.classList.add(
          "bg-white",
          "text-gray-700",
          "border-2",
          "border-gray-200"
        );
      });

      // Activate concrete button
      const concreteBtn = document.querySelector('[data-category="concrete"][data-type="all"]');
      if (concreteBtn) {
        concreteBtn.classList.add("active", "bg-primary", "text-white", "shadow-lg");
        concreteBtn.classList.remove(
          "bg-white",
          "text-gray-700",
          "border-2",
          "border-gray-200"
        );
      }

      // Show finish filter
      if (concreteFinishFilter) {
        concreteFinishFilter.classList.remove("hidden");
        concreteFinishFilter.classList.add("flex");

        // Reset finish buttons
        finishBtns.forEach((finishBtn) => {
          finishBtn.classList.remove(
            "active",
            "bg-primary",
            "text-white"
          );
          finishBtn.classList.add("bg-gray-100", "text-gray-600");
        });
      }

      filterGallery();
    });
  });

  // Finish button clicks (multi-select)
  finishBtns.forEach((btn) => {
    btn.addEventListener("click", () => {
      const finish = btn.getAttribute("data-finish");
      if (!finish) return;

      // Toggle finish selection
      const finishIndex = selectedFinishes.indexOf(finish);
      if (finishIndex > -1) {
        // Remove finish from selection
        selectedFinishes.splice(finishIndex, 1);
        btn.classList.remove(
          "active",
          "bg-primary",
          "text-white"
        );
        btn.classList.add("bg-gray-100", "text-gray-600");
      } else {
        // Add finish to selection
        selectedFinishes.push(finish);
        btn.classList.add(
          "active",
          "bg-primary",
          "text-white"
        );
        btn.classList.remove("bg-gray-100", "text-gray-600");
      }

      filterGallery();
    });
  });

  // Lightbox functionality
  const lightbox = document.getElementById("lightbox");
  const lightboxImage = document.getElementById(
    "lightbox-image"
  ) as HTMLImageElement;
  const lightboxCaption = document.getElementById("lightbox-caption");
  const lightboxCounter = document.getElementById("lightbox-counter");
  const lightboxClose = document.getElementById("lightbox-close");
  const lightboxPrev = document.getElementById("lightbox-prev");
  const lightboxNext = document.getElementById("lightbox-next");

  let currentLightboxIndex = 0;
  let visibleGalleryItems: Element[] = [];

  function updateVisibleItems() {
    visibleGalleryItems = Array.from(galleryItems).filter(
      (item) => !item.classList.contains("hidden")
    );
  }

  function openLightbox(index: number) {
    updateVisibleItems();
    currentLightboxIndex = index;

    const item = visibleGalleryItems[currentLightboxIndex];
    if (!item) return;

    const img = item.querySelector("img");
    if (
      !img ||
      !lightbox ||
      !lightboxImage ||
      !lightboxCaption ||
      !lightboxCounter
    )
      return;

    lightboxImage.src = img.src;
    lightboxImage.alt = img.alt;
    lightboxCaption.textContent = img.alt;
    lightboxCounter.textContent = `${currentLightboxIndex + 1} / ${visibleGalleryItems.length}`;

    lightbox.classList.remove("hidden");
    lightbox.classList.add("flex");
    document.body.style.overflow = "hidden";
  }

  function closeLightbox() {
    if (!lightbox) return;
    lightbox.classList.add("hidden");
    lightbox.classList.remove("flex");
    document.body.style.overflow = "";
  }

  function nextImage() {
    updateVisibleItems();
    currentLightboxIndex =
      (currentLightboxIndex + 1) % visibleGalleryItems.length;
    openLightbox(currentLightboxIndex);
  }

  function prevImage() {
    updateVisibleItems();
    currentLightboxIndex =
      currentLightboxIndex === 0
        ? visibleGalleryItems.length - 1
        : currentLightboxIndex - 1;
    openLightbox(currentLightboxIndex);
  }

  // Gallery item clicks
  galleryItems.forEach((item, index) => {
    item.addEventListener("click", () => {
      updateVisibleItems();
      const visibleIndex = visibleGalleryItems.indexOf(item);
      if (visibleIndex !== -1) {
        openLightbox(visibleIndex);
      }
    });
  });

  // Lightbox controls
  lightboxClose?.addEventListener("click", closeLightbox);
  lightboxNext?.addEventListener("click", nextImage);
  lightboxPrev?.addEventListener("click", prevImage);

  // Close on background click
  lightbox?.addEventListener("click", (e) => {
    if (e.target === lightbox) {
      closeLightbox();
    }
  });

  // Keyboard navigation
  document.addEventListener("keydown", (e) => {
    if (!lightbox?.classList.contains("hidden")) {
      if (e.key === "Escape") closeLightbox();
      if (e.key === "ArrowRight") nextImage();
      if (e.key === "ArrowLeft") prevImage();
    }
  });

  // Sidebar category button clicks
  sidebarCategoryBtns.forEach((btn) => {
    btn.addEventListener("click", () => {
      // Skip if disabled
      if (btn.hasAttribute("disabled")) return;

      // Remove active class from all sidebar category buttons
      sidebarCategoryBtns.forEach((b) => {
        b.classList.remove("bg-primary", "text-white", "font-medium");
        b.classList.add("text-gray-700", "hover:bg-gray-100", "hover:text-primary");
      });

      // Add active class to clicked button
      btn.classList.add("bg-primary", "text-white", "font-medium");
      btn.classList.remove("text-gray-700", "hover:bg-gray-100", "hover:text-primary");

      currentCategory = btn.getAttribute("data-category") || "all";
      currentType = "all";
      selectedFinishes = [];

      // Show/hide concrete filters in sidebar
      if (sidebarConcreteFilters) {
        if (currentCategory === "concrete") {
          sidebarConcreteFilters.classList.remove("hidden");
          // Reset type and finish buttons
          sidebarTypeBtns.forEach((typeBtn) => {
            typeBtn.classList.remove("bg-primary", "text-white");
            typeBtn.classList.add("text-gray-600");
          });
          sidebarFinishBtns.forEach((finishBtn) => {
            finishBtn.classList.remove("bg-primary", "text-white");
            finishBtn.classList.add("text-gray-600");
          });
        } else {
          sidebarConcreteFilters.classList.add("hidden");
        }
      }

      // Also sync with top category buttons if they exist
      categoryBtns.forEach((b) => {
        b.classList.remove("active", "bg-primary", "text-white", "shadow-lg");
        b.classList.add("bg-white", "text-gray-700", "border-2", "border-gray-200");
      });
      const matchingBtn = Array.from(categoryBtns).find(b => b.getAttribute("data-category") === currentCategory);
      if (matchingBtn) {
        matchingBtn.classList.add("active", "bg-primary", "text-white", "shadow-lg");
        matchingBtn.classList.remove("bg-white", "text-gray-700", "border-2", "border-gray-200");
      }

      filterGallery();
    });
  });

  // Sidebar type button clicks
  sidebarTypeBtns.forEach((btn) => {
    btn.addEventListener("click", () => {
      currentCategory = "concrete";
      currentType = btn.getAttribute("data-type") || "all";
      selectedFinishes = [];

      // Update sidebar type buttons
      sidebarTypeBtns.forEach((b) => {
        b.classList.remove("bg-primary", "text-white");
        b.classList.add("text-gray-600");
      });
      btn.classList.add("bg-primary", "text-white");
      btn.classList.remove("text-gray-600");

      // Reset finish buttons
      sidebarFinishBtns.forEach((finishBtn) => {
        finishBtn.classList.remove("bg-primary", "text-white");
        finishBtn.classList.add("text-gray-600");
      });

      filterGallery();
    });
  });

  // Sidebar finish button clicks
  sidebarFinishBtns.forEach((btn) => {
    btn.addEventListener("click", () => {
      const finish = btn.getAttribute("data-finish");
      if (!finish) return;

      // Toggle finish selection
      const finishIndex = selectedFinishes.indexOf(finish);
      if (finishIndex > -1) {
        // Remove finish from selection
        selectedFinishes.splice(finishIndex, 1);
        btn.classList.remove("bg-primary", "text-white");
        btn.classList.add("text-gray-600");
      } else {
        // Add finish to selection
        selectedFinishes.push(finish);
        btn.classList.add("bg-primary", "text-white");
        btn.classList.remove("text-gray-600");
      }

      filterGallery();
    });
  });

  // Initialize
  filterGallery();
</script>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.4s ease-out;
  }
</style>
