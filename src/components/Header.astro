<header class="header fixed top-0 w-full h-16 md:h-20 z-[999] flex justify-between items-center bg-white shadow-lg px-6 md:px-12">
  <a href="/" class="focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-primary/50 rounded">
    <img class="h-12 md:h-16" alt="Rocky Concrete logo" src="/img/logo.jpeg" />
  </a>

  <!-- Desktop & Mobile Navigation -->
  <nav class="main-nav fixed md:relative top-0 left-full md:left-0 w-full md:w-auto h-screen md:h-auto z-[1] md:z-auto flex items-center justify-center md:justify-start bg-white/90 md:bg-transparent opacity-0 md:opacity-100 invisible md:visible pointer-events-none md:pointer-events-auto transition-all duration-500 ease-in-out">
    <ul class="main-nav-list list-none flex flex-col md:flex-row items-center gap-12 md:gap-8 lg:gap-12">
      <li>
        <a
          class="main-nav-link inline-block no-underline text-[#333] font-medium text-[3rem] md:text-lg transition-all duration-300 hover:text-primary-dark focus-visible:text-primary-dark focus-visible:outline-none"
          href="#about-us"
        >
          ABOUT US
        </a>
      </li>
      <li>
        <a
          class="main-nav-link inline-block no-underline text-[#333] font-medium text-[3rem] md:text-lg transition-all duration-300 hover:text-primary-dark focus-visible:text-primary-dark focus-visible:outline-none"
          href="#services"
        >
          SERVICES
        </a>
      </li>
      <li>
        <a
          class="main-nav-link inline-block no-underline text-[#333] font-medium text-[3rem] md:text-lg transition-all duration-300 hover:text-primary-dark focus-visible:text-primary-dark focus-visible:outline-none"
          href="/gallery"
        >
          GALLERY
        </a>
      </li>
      <li>
        <a
          class="main-nav-link nav-cta inline-block no-underline text-white bg-primary py-3 px-6 rounded-lg text-[3rem] md:text-lg transition-all duration-300 hover:bg-primary-dark focus-visible:bg-primary-dark focus-visible:outline-none"
          href="#cta"
        >
          CONTACT US
        </a>
      </li>
    </ul>
  </nav>

  <!-- Mobile Menu Button -->
  <button
    class="btn-mobile-nav block md:hidden border-none bg-transparent cursor-pointer z-[2] focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-primary/50 rounded"
    aria-label="Toggle navigation menu"
  >
    <ion-icon class="icon-mobile-nav text-[#333] h-12 w-12" name="menu-outline"></ion-icon>
    <ion-icon class="icon-mobile-nav text-[#333] h-12 w-12 hidden" name="close-outline"></ion-icon>
  </button>
</header>

<style>
  /* Default state: close icon is hidden */
  .icon-mobile-nav[name="close-outline"] {
    display: none;
  }

  /* When nav is open: show navigation */
  .nav-open .main-nav {
    opacity: 1;
    pointer-events: auto;
    visibility: visible;
    transform: translateX(-100%);
  }

  /* When nav is open: toggle icons */
  .nav-open .icon-mobile-nav[name="close-outline"] {
    display: block;
  }

  .nav-open .icon-mobile-nav[name="menu-outline"] {
    display: none;
  }
</style>

<script is:inline>
  // Mobile navigation toggle
  const btnNavEl = document.querySelector(".btn-mobile-nav");
  const headerEl = document.querySelector(".header");

  if (btnNavEl && headerEl) {
    btnNavEl.addEventListener("click", function () {
      headerEl.classList.toggle("nav-open");
    });
  }

  // Close mobile nav when clicking on nav links
  const allLinks = document.querySelectorAll(".main-nav-link");

  allLinks.forEach(function (link) {
    link.addEventListener("click", function () {
      if (headerEl && headerEl.classList.contains("nav-open")) {
        headerEl.classList.remove("nav-open");
      }
    });
  });
</script>
