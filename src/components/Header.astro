<!-- LUXURY TRANSPARENT HEADER - Transitions on scroll -->
<header class="header fixed top-0 w-full h-20 md:h-24 z-[999] flex justify-between items-center px-6 md:px-12 transition-all duration-500">
  <!-- Logo - White background for visibility -->
  <a href="/" class="logo-link relative z-10 focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-bronze/50 rounded">
    <div class="bg-white p-2 md:p-2.5 rounded-sm shadow-lg transition-all duration-300 hover:shadow-xl">
      <img class="h-10 md:h-12" alt="Rocky Concrete logo" src="/img/logo.jpeg" />
    </div>
  </a>

  <!-- Desktop Navigation -->
  <nav class="main-nav hidden md:block">
    <ul class="main-nav-list list-none flex items-center gap-8 lg:gap-10">
      <li>
        <a
          class="nav-link font-['Bebas_Neue'] inline-block no-underline text-white text-xl tracking-wider transition-all duration-300 hover:text-bronze hover:-translate-y-0.5 focus-visible:text-bronze focus-visible:outline-none relative group"
          style="text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);"
          href="#about-us"
        >
          ABOUT US
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-bronze transition-all duration-300 group-hover:w-full"></span>
        </a>
      </li>
      <li>
        <a
          class="nav-link font-['Bebas_Neue'] inline-block no-underline text-white text-xl tracking-wider transition-all duration-300 hover:text-bronze hover:-translate-y-0.5 focus-visible:text-bronze focus-visible:outline-none relative group"
          style="text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);"
          href="#services"
        >
          SERVICES
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-bronze transition-all duration-300 group-hover:w-full"></span>
        </a>
      </li>
      <li>
        <a
          class="nav-link font-['Bebas_Neue'] inline-block no-underline text-white text-xl tracking-wider transition-all duration-300 hover:text-bronze hover:-translate-y-0.5 focus-visible:text-bronze focus-visible:outline-none relative group"
          style="text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);"
          href="/gallery"
        >
          GALLERY
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-bronze transition-all duration-300 group-hover:w-full"></span>
        </a>
      </li>
      <li>
        <a
          class="nav-cta font-['Bebas_Neue'] inline-block no-underline text-white border-2 border-white py-2.5 px-6 tracking-wider text-lg transition-all duration-300 hover:bg-bronze hover:border-bronze hover:text-white hover:-translate-y-0.5 focus-visible:bg-bronze focus-visible:border-bronze focus-visible:outline-none shadow-[0_4px_15px_rgb(0_0_0/30%)] hover:shadow-[0_4px_20px_rgb(184_134_11/40%)]"
          style="text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);"
          href="#cta"
        >
          CONTACT US
        </a>
      </li>
    </ul>
  </nav>

  <!-- Mobile Navigation -->
  <nav class="mobile-nav fixed top-0 left-full w-full h-screen z-[998] flex items-center justify-center bg-black-pure/95 backdrop-blur-md opacity-0 invisible pointer-events-none transition-all duration-500 ease-in-out md:hidden">
    <ul class="mobile-nav-list list-none flex flex-col items-center gap-8">
      <li class="mobile-link-item opacity-0 translate-y-8 transition-all duration-500" style="transition-delay: 0.1s;">
        <a
          class="mobile-nav-link font-['Bebas_Neue'] inline-block no-underline text-white text-4xl tracking-wider transition-all duration-300 hover:text-bronze focus-visible:text-bronze focus-visible:outline-none"
          href="#about-us"
        >
          ABOUT US
        </a>
      </li>
      <li class="mobile-link-item opacity-0 translate-y-8 transition-all duration-500" style="transition-delay: 0.2s;">
        <a
          class="mobile-nav-link font-['Bebas_Neue'] inline-block no-underline text-white text-4xl tracking-wider transition-all duration-300 hover:text-bronze focus-visible:text-bronze focus-visible:outline-none"
          href="#services"
        >
          SERVICES
        </a>
      </li>
      <li class="mobile-link-item opacity-0 translate-y-8 transition-all duration-500" style="transition-delay: 0.3s;">
        <a
          class="mobile-nav-link font-['Bebas_Neue'] inline-block no-underline text-white text-4xl tracking-wider transition-all duration-300 hover:text-bronze focus-visible:text-bronze focus-visible:outline-none"
          href="/gallery"
        >
          GALLERY
        </a>
      </li>
      <li class="mobile-link-item opacity-0 translate-y-8 transition-all duration-500" style="transition-delay: 0.4s;">
        <a
          class="mobile-nav-link nav-cta-mobile font-['Bebas_Neue'] inline-block no-underline text-white border-2 border-bronze bg-bronze py-4 px-8 tracking-wider text-3xl transition-all duration-300 hover:bg-transparent hover:border-white hover:text-white focus-visible:bg-transparent focus-visible:outline-none mt-4"
          href="#cta"
        >
          CONTACT US
        </a>
      </li>
    </ul>
  </nav>

  <!-- Mobile Menu Button -->
  <button
    class="btn-mobile-nav block md:hidden border-none bg-transparent cursor-pointer z-[999] focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-bronze/50 rounded p-2"
    aria-label="Toggle navigation menu"
  >
    <ion-icon class="icon-mobile-nav menu-icon text-white h-10 w-10" name="menu-outline"></ion-icon>
    <ion-icon class="icon-mobile-nav close-icon text-white h-10 w-10 hidden" name="close-outline"></ion-icon>
  </button>
</header>

<style>
  /* Initial transparent header state */
  .header {
    background: transparent;
  }

  /* Scrolled state - semi-transparent dark background */
  .header.scrolled {
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  /* Mobile menu icons */
  .close-icon {
    display: none;
  }

  /* When nav is open */
  .nav-open .mobile-nav {
    opacity: 1;
    pointer-events: auto;
    visibility: visible;
    transform: translateX(-100%);
  }

  .nav-open .close-icon {
    display: block;
  }

  .nav-open .menu-icon {
    display: none;
  }

  /* Staggered fade-in for mobile menu items */
  .nav-open .mobile-link-item {
    opacity: 1;
    transform: translateY(0);
  }

  /* Prevent body scroll when mobile nav is open */
  body.nav-open {
    overflow: hidden;
  }
</style>

<script is:inline>
  // Scroll transition effect
  const header = document.querySelector(".header");

  function handleScroll() {
    if (window.scrollY > 100) {
      header?.classList.add("scrolled");
    } else {
      header?.classList.remove("scrolled");
    }
  }

  // Add scroll listener
  window.addEventListener("scroll", handleScroll);

  // Check on load
  handleScroll();

  // Mobile navigation toggle
  const btnNav = document.querySelector(".btn-mobile-nav");
  const bodyEl = document.body;

  if (btnNav && header) {
    btnNav.addEventListener("click", function () {
      header.classList.toggle("nav-open");
      bodyEl.classList.toggle("nav-open");
    });
  }

  // Close mobile nav when clicking on nav links
  const mobileLinks = document.querySelectorAll(".mobile-nav-link");

  mobileLinks.forEach(function (link) {
    link.addEventListener("click", function () {
      if (header?.classList.contains("nav-open")) {
        header.classList.remove("nav-open");
        bodyEl.classList.remove("nav-open");
      }
    });
  });
</script>
