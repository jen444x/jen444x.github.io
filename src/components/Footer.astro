<footer class="footer bg-gray-100 py-12 md:py-16 border-t border-gray-200">
  <div class="container max-w-7xl mx-auto px-6 md:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-8">
      <!-- Navigation Column -->
      <nav class="nav-col">
        <p class="footer-heading text-gray-800 font-semibold text-lg mb-4">
          Navigation
        </p>
        <ul class="footer-nav space-y-3">
          <li>
            <a
              class="footer-link text-gray-600 hover:text-primary transition-colors text-base"
              href="#"
            >
              Home
            </a>
          </li>
          <li>
            <a
              class="footer-link text-gray-600 hover:text-primary transition-colors text-base"
              href="#about-us"
            >
              About Us
            </a>
          </li>
          <li>
            <a
              class="footer-link text-gray-600 hover:text-primary transition-colors text-base"
              href="#services"
            >
              Services
            </a>
          </li>
          <li>
            <a
              class="footer-link text-gray-600 hover:text-primary transition-colors text-base"
              href="#showcase"
            >
              Showcase
            </a>
          </li>
          <li>
            <a
              class="footer-link text-gray-600 hover:text-primary transition-colors text-base"
              href="#cta"
            >
              Contact
            </a>
          </li>
        </ul>
      </nav>

      <!-- Contact Column -->
      <div class="contact-col">
        <p class="footer-heading text-gray-800 font-semibold text-lg mb-4">
          Contact Us
        </p>
        <address class="contacts not-italic text-gray-600 space-y-3">
          <p>
            <a
              class="footer-link hover:text-primary transition-colors text-base"
              href="tel:661-378-4017"
            >
              661-378-4017
            </a>
          </p>
          <p>
            <a
              class="footer-link hover:text-primary transition-colors text-base break-all"
              href="mailto:rockyconcreteinc22@gmail.com"
            >
              rockyconcreteinc22@gmail.com
            </a>
          </p>
          <p class="location text-gray-500 text-base">Bakersfield, CA</p>
        </address>
      </div>

      <!-- Logo & Social Column -->
      <div class="logo-col flex flex-col items-start md:items-end">
        <a href="#" class="footer-logo mb-6 bg-white p-2 rounded-lg shadow-md hover:shadow-lg transition-shadow inline-block">
          <img
            class="logo w-20 md:w-24 rounded-lg"
            alt="Rocky Concrete logo"
            src="/img/logo.jpeg"
          />
        </a>

        <ul class="social-links flex gap-6">
          <li>
            <a
              class="footer-link text-gray-600 hover:text-primary transition-colors"
              href="https://www.tiktok.com/@rockyconcreteinc"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Visit our TikTok page"
            >
              <ion-icon class="text-3xl" name="logo-tiktok"></ion-icon>
            </a>
          </li>
          <li>
            <a
              class="footer-link text-gray-600 hover:text-primary transition-colors"
              href="https://www.instagram.com/rockyconcreteinc/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Visit our Instagram page"
            >
              <ion-icon class="text-3xl" name="logo-instagram"></ion-icon>
            </a>
          </li>
          <li>
            <a
              class="footer-link text-gray-600 hover:text-primary transition-colors"
              href="https://m.facebook.com/RockyConcreteInc/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Visit our Facebook page"
            >
              <ion-icon class="text-3xl" name="logo-facebook"></ion-icon>
            </a>
          </li>
        </ul>

        <p class="copyright text-gray-500 text-sm mt-8 md:text-right whitespace-nowrap">
          Copyright &copy; <span class="year">{new Date().getFullYear()}</span> Rocky Concrete Inc.
        </p>
        <p class="text-gray-500 text-sm md:text-right">
          All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>
