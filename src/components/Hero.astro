---
import { Image } from "astro:assets";
import heroImg from "../../public/img/hero/hero-img2.avif";
---

<section class="section-hero relative h-screen overflow-hidden bg-black-pure">
  <!-- Background Image with Astro optimization -->
  <Image
    src={heroImg}
    alt="Rocky Concrete outdoor landscaping work"
    class="absolute inset-0 w-full h-full object-cover object-[center_55%]"
    loading="eager"
    fetchpriority="high"
    quality={85}
  />

  <!-- DRAMATIC Dark Overlay - Luxury Industrial -->
  <div
    class="absolute inset-0 bg-linear-to-b from-black/70 via-black/60 to-black/80"
  >
  </div>

  <!-- Subtle Concrete Texture Overlay -->
  <div
    class="absolute inset-0 opacity-[0.03] mix-blend-overlay bg-[url('data:image/svg+xml;base64,')]"
  >
  </div>

  <!-- Content - LUXURY: THIN + LARGE -->
  <div
    class="hero absolute z-10 max-w-6xl left-1/2 top-[55%] -translate-x-1/2 -translate-y-1/2 text-center px-6 md:px-12"
  >
    <!-- Main Heading - THIN + LARGE = Luxury (optimized spacing) -->
    <h1
      class="heading-primary text-white font-light leading-[1.1] mb-4 md:mb-6 tracking-[0.04em]
                text-5xl sm:text-6xl md:text-7xl lg:text-8xl
                [text-shadow:0_4px_24px_rgb(0_0_0/70%)]
                hero-animate opacity-0"
      style="animation-delay: 0.2s"
    >
      TRANSFORMING<br />OUTDOOR SPACES
    </h1>

    <!-- Bronze accent line - Tight with heading (they're one unit) -->
    <div
      class="bronze-divider mx-auto mb-10 md:mb-12 hero-animate opacity-0"
      style="animation-delay: 0.4s"
    >
    </div>

    <!-- Subheading - Expanded with location context -->
    <p
      class="heading-description text-white-soft text-lg md:text-xl lg:text-2xl font-light leading-relaxed mb-10 md:mb-12 max-w-3xl mx-auto tracking-wide hero-animate opacity-0"
      style="animation-delay: 0.6s"
    >
      Expert concrete and landscape construction serving Bakersfield and
      surrounding areas
    </p>

    <!-- CTA Button - Professional with proper spacing -->
    <a
      href="#cta"
      class="btn inline-block text-sm md:text-base font-bold uppercase tracking-widest
             bg-white text-black-pure no-underline
             py-4 px-12 md:py-6 md:px-16
             border-2 border-white
             transition-all duration-300
             hover:bg-transparent hover:text-white hover:border-bronze
             focus-visible:bg-transparent focus-visible:text-white focus-visible:outline-none
             shadow-[0_8px_30px_rgb(0_0_0/30%)]
             hover:shadow-[0_8px_40px_rgb(184_134_11/20%)]
             hero-animate opacity-0"
      style="animation-delay: 0.8s"
    >
      Get Free Estimate
    </a>
  </div>
</section>

<!-- HERO PAGE-LOAD ANIMATION SCRIPT -->
<script>
  // Trigger animations on page load
  document.addEventListener("DOMContentLoaded", () => {
    const heroElements = document.querySelectorAll(".hero-animate");
    heroElements.forEach((el) => {
      el.classList.add("animate-fade-in-up");
    });
  });
</script>

<style>
  /* Page-load fade-in animation */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.9s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .hero-animate {
    will-change: transform, opacity;
  }
</style>
