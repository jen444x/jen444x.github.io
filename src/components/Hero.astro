---
import { Image } from "astro:assets";
import heroImg from "../../public/img/hero/hero-img2.avif";
---

<!-- Hero uses same pattern as gallery heroes: min-height + flexbox centering -->
<!-- svh = small viewport height (accounts for mobile browser UI) -->
<section class="section-hero relative min-h-svh flex items-center justify-center overflow-hidden bg-black-pure pt-20 md:pt-24">
  <!-- Background Image with Astro optimization -->
  <Image
    src={heroImg}
    alt="Rocky Concrete outdoor landscaping work"
    class="absolute inset-0 w-full h-full object-cover object-[center_55%]"
    loading="eager"
    fetchpriority="high"
    quality={85}
  />

  <!-- DRAMATIC Dark Overlay - Luxury Industrial -->
  <div class="absolute inset-0 bg-linear-to-b from-black/70 via-black/60 to-black/80"></div>

  <!-- Subtle Concrete Texture Overlay -->
  <div
    class="absolute inset-0 opacity-[0.03] mix-blend-overlay bg-[url('data:image/svg+xml;base64,')]"
  ></div>

  <!-- Content - Centered with flexbox -->
  <div class="hero relative z-10 max-w-6xl text-center px-6 md:px-12">
    <!-- Main Heading -->
    <h1
      class="heading-primary text-white font-light leading-[1.1] mb-4 md:mb-6 tracking-[0.04em]
             text-5xl sm:text-6xl md:text-7xl lg:text-8xl
             [text-shadow:0_4px_24px_rgb(0_0_0/70%)]
             hero-animate opacity-0"
      style="animation-delay: 0.2s"
    >
      TRANSFORMING<br />OUTDOOR SPACES
    </h1>

    <!-- Bronze accent line -->
    <div
      class="bronze-divider mx-auto mb-10 md:mb-12 hero-animate opacity-0"
      style="animation-delay: 0.4s"
    ></div>

    <!-- Subheading -->
    <p
      class="heading-description text-white-soft font-light leading-relaxed max-w-3xl mx-auto tracking-wide
             text-lg md:text-xl lg:text-2xl
             mb-10 md:mb-12
             hero-animate opacity-0"
      style="animation-delay: 0.6s"
    >
      Expert concrete and landscape construction serving Bakersfield and surrounding areas
    </p>

    <!-- CTA Button -->
    <a
      href="#cta"
      class="btn inline-block font-bold uppercase tracking-widest
             text-sm md:text-base
             bg-white text-black-pure no-underline
             py-4 px-12 md:py-6 md:px-16
             border-2 border-white
             transition-all duration-300
             hover:bg-transparent hover:text-white hover:border-bronze
             focus-visible:bg-transparent focus-visible:text-white focus-visible:outline-none
             shadow-[0_8px_30px_rgb(0_0_0/30%)]
             hover:shadow-[0_8px_40px_rgb(184_134_11/20%)]
             hero-animate opacity-0"
      style="animation-delay: 0.8s"
    >
      Get Free Estimate
    </a>
  </div>
</section>

<script>
  // Trigger animations on page load
  document.addEventListener("DOMContentLoaded", () => {
    const heroElements = document.querySelectorAll(".hero-animate");
    heroElements.forEach((el) => {
      el.classList.add("animate-fade-in-up");
    });
  });
</script>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.9s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .hero-animate {
    will-change: transform, opacity;
  }

  /* Mobile landscape only (short + wide screens) */
  @media (orientation: landscape) and (max-height: 500px) {
    .section-hero {
      padding-top: 4rem;
    }
    .section-hero h1 {
      font-size: 2.25rem;
      margin-bottom: 0.75rem;
    }
    .section-hero .bronze-divider {
      margin-bottom: 1rem;
    }
    .section-hero p {
      font-size: 0.875rem;
      margin-bottom: 1rem;
    }
    .section-hero .btn {
      padding: 0.75rem 2rem;
    }
  }
</style>
