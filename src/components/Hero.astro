---
import { Image } from 'astro:assets';
import heroImg from '../../public/img/hero/hero-img.jpg';
---

<section class="section-hero relative h-screen overflow-hidden bg-[#0A0A0A]">
  <!-- Background Image with Astro optimization -->
  <Image
    src={heroImg}
    alt="Rocky Concrete outdoor landscaping work"
    class="absolute inset-0 w-full h-full object-cover object-[center_55%]"
    loading="eager"
    quality={85}
  />

  <!-- DRAMATIC Dark Overlay - Luxury Industrial -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/60 to-black/80"></div>

  <!-- Subtle Concrete Texture Overlay -->
  <div class="absolute inset-0 opacity-[0.03] mix-blend-overlay bg-[url('data:image/svg+xml;base64,')]"></div>

  <!-- Content - LUXURY: THIN + LARGE -->
  <div class="hero absolute z-10 max-w-6xl left-1/2 top-[55%] -translate-x-1/2 -translate-y-1/2 text-center px-6 md:px-12">
    <!-- Main Heading - THIN + LARGE = Luxury (optimized spacing) -->
    <h1 class="heading-primary text-white font-light leading-[1.1] mb-8 md:mb-10 tracking-[0.04em]
                text-5xl sm:text-6xl md:text-7xl lg:text-8xl
                [text-shadow:_0_4px_24px_rgb(0_0_0_/_70%)]">
      TRANSFORMING<br />OUTDOOR SPACES
    </h1>

    <!-- Bronze accent line - Visible but elegant -->
    <div class="w-24 h-[2px] bg-[#B8860B] mx-auto mb-8 md:mb-10"></div>

    <!-- Subheading - Clear value proposition -->
    <p class="heading-description text-[#E5E5E5] text-lg md:text-xl lg:text-2xl font-light leading-relaxed mb-10 md:mb-12 max-w-3xl mx-auto tracking-wide">
      Expert concrete and landscape construction
    </p>

    <!-- CTA Button - Professional with proper spacing -->
    <a
      href="#cta"
      class="btn inline-block text-sm md:text-base font-bold uppercase tracking-widest
             bg-white text-[#0A0A0A] no-underline
             py-4 px-10 md:py-5 md:px-12
             border-2 border-white
             transition-all duration-300
             hover:bg-transparent hover:text-white hover:border-[#B8860B]
             focus-visible:bg-transparent focus-visible:text-white focus-visible:outline-none
             shadow-[0_8px_30px_rgb(0_0_0_/_30%)]
             hover:shadow-[0_8px_40px_rgb(184_134_11_/_20%)]"
    >
      Get Free Estimate
    </a>
  </div>
</section>
