---
import { Image } from 'astro:assets';
import collageImg from '../../public/img/collage.png';
---

<!-- LIGHT Section - Breathing Room After Dark Hero -->
<section class="about-us py-24 md:py-32 lg:py-40 bg-white" id="about-us">
  <div class="container max-w-7xl mx-auto px-8 md:px-12">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-16 md:gap-20 lg:gap-24 items-center">
      <!-- Image -->
      <div class="about-us-img-box flex justify-center md:justify-start scroll-reveal opacity-0" style="animation-delay: 0.1s">
        <Image
          src={collageImg}
          alt="Photos showing concrete and landscape work"
          class="about-us-img w-3/5 md:w-full drop-shadow-2xl"
          quality={85}
        />
      </div>

      <!-- Text Content - Clean & Professional -->
      <div class="about-us-text-box text-center md:text-left">
        <!-- Heading - Bebas Neue for consistency -->
        <h2 class="heading-secondary text-charcoal font-semibold leading-tight mb-6 tracking-wide
                   text-4xl md:text-5xl lg:text-6xl
                   scroll-reveal opacity-0" style="animation-delay: 0.2s">
          TRUSTED EXPERTS IN CONCRETE & LANDSCAPING
        </h2>

        <!-- Thin divider line -->
        <div class="w-16 h-0.5 bg-bronze mb-8 mx-auto md:mx-0 scroll-reveal opacity-0" style="animation-delay: 0.35s"></div>

        <!-- Body Copy - Generous line height for readability -->
        <p class="about-us-description text-slate text-base md:text-lg leading-relaxed mb-6 scroll-reveal opacity-0" style="animation-delay: 0.5s">
          With over 15 years of experience, Rocky Concrete is your trusted
          partner for high-quality concrete and landscaping services in
          Bakersfield and surrounding areas.
        </p>

        <p class="about-us-description text-slate text-base md:text-lg leading-relaxed scroll-reveal opacity-0" style="animation-delay: 0.65s">
          As a family-operated business, we prioritize customer satisfaction,
          delivering exceptional results in every project. From driveways and
          patios to custom outdoor kitchens, fire pits, and comprehensive
          landscaping solutions, our expert team transforms outdoor spaces
          with precision and care.
        </p>
      </div>
    </div>
  </div>
</section>

<!-- SCROLL ANIMATION SCRIPT -->
<script>
  // Intersection Observer for scroll-triggered animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate-fade-in-up');
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  // Observe all scroll-reveal elements
  document.querySelectorAll('.about-us .scroll-reveal').forEach((el) => {
    observer.observe(el);
  });
</script>

<style>
  /* Scroll-triggered fade-in animation */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .scroll-reveal {
    will-change: transform, opacity;
  }
</style>
