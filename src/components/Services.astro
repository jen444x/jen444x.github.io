<!-- DARK Section - Luxury Showcase with BENTO GRID + SCROLL ANIMATIONS -->
<section class="services py-24 md:py-32 lg:py-40 bg-black-pure overflow-hidden" id="services">
  <div class="container max-w-7xl mx-auto px-8 md:px-12">
    <!-- Section Heading - Scroll fade in -->
    <div class="text-center mb-16 md:mb-20 scroll-reveal opacity-0">
      <h2 class="heading-secondary text-white font-semibold leading-tight mb-6 tracking-wide
                 text-4xl md:text-5xl lg:text-6xl">
        OUR SERVICES
      </h2>
      <div class="w-24 h-0.5 bg-bronze mx-auto"></div>
    </div>

    <!-- BENTO GRID - Asymmetric Layout (2024 Trend!) -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8 auto-rows-[280px]">

      <!-- Service 1: Concrete Work - FEATURED (2 cols wide, 2 rows tall) -->
      <a href="/gallery#section-concrete" class="scroll-reveal opacity-0 lg:col-span-2 lg:row-span-2 group relative overflow-hidden bg-linear-to-br from-charcoal to-black-pure border-2 border-charcoal-light hover:border-bronze transition-all duration-500 cursor-pointer block" style="animation-delay: 0.1s">
        <div class="absolute inset-0">
          <Image
            src={concreteImg}
            alt="Red stamped concrete patio"
            class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
            quality={85}
          />
          <div class="absolute inset-0 bg-linear-to-t from-black via-black/70 to-black/30 group-hover:from-black/90 group-hover:via-black/60 transition-all duration-500"></div>
        </div>
        <div class="relative z-10 p-8 h-full flex flex-col justify-end">
          <h3 class="text-white text-3xl md:text-4xl font-bold mb-3 tracking-wide uppercase transform translate-y-0 group-hover:-translate-y-2 transition-transform duration-300">
            CONCRETE WORK
          </h3>
          <p class="text-[#D1D1D1] text-base leading-relaxed opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-500">
            Driveways, patios, walkways, and precision flatwork
          </p>
        </div>
      </a>

      <!-- Service 2: Outdoor Living - Standard -->
      <a href="/gallery#section-outdoor-living" class="scroll-reveal opacity-0 group relative overflow-hidden bg-linear-to-br from-charcoal to-black-pure border-2 border-charcoal-light hover:border-bronze transition-all duration-500 cursor-pointer block" style="animation-delay: 0.2s">
        <div class="absolute inset-0">
          <Image
            src={outdoorLivingImg}
            alt="Covered outdoor kitchen"
            class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
            quality={85}
          />
          <div class="absolute inset-0 bg-linear-to-t from-black via-black/70 to-black/30 group-hover:from-black/90 group-hover:via-black/60 transition-all duration-500"></div>
        </div>
        <div class="relative z-10 p-8 h-full flex flex-col justify-end">
          <h3 class="text-white text-2xl md:text-3xl font-bold mb-3 tracking-wide uppercase transform translate-y-0 group-hover:-translate-y-2 transition-transform duration-300">
            OUTDOOR LIVING
          </h3>
          <p class="text-[#D1D1D1] text-sm leading-relaxed opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-500">
            Kitchens, fire features & covered patios
          </p>
        </div>
      </a>

      <!-- Service 3: Pools & Spas - Standard -->
      <a href="/gallery#section-pools-spas" class="scroll-reveal opacity-0 group relative overflow-hidden bg-linear-to-br from-charcoal to-black-pure border-2 border-charcoal-light hover:border-bronze transition-all duration-500 cursor-pointer block" style="animation-delay: 0.3s">
        <div class="absolute inset-0">
