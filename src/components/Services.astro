---
import { Image } from 'astro:assets';
// Import images from gallery sections for visual continuity
import concreteImg from '../../public/img/show-case/concrete/showcase9.jpeg';
import outdoorLivingImg from '../../public/img/show-case/backyard-remodels/showcase11.jpeg';
import poolsImg from '../../public/img/show-case/backyard-remodels/showcase4.jpeg';
import landscapingImg from '../../public/img/show-case/concrete/showcase10.JPEG';
import ironWorkImg from '../../public/img/show-case/iron-work/IMG_8394.jpeg';
