---
import { Image } from 'astro:assets';
// Import images from gallery sections for visual continuity
import concreteImg from '../../public/img/show-case/concrete/showcase9.jpeg';
import outdoorLivingImg from '../../public/img/show-case/backyard-remodels/showcase11.jpeg';
import poolsImg from '../../public/img/show-case/backyard-remodels/showcase4.jpeg';
import fireFeaturesImg from '../../public/img/show-case/backyard-remodels/showcase8.jpeg';
import landscapingImg from '../../public/img/show-case/concrete/showcase10.JPEG';
import ironWorkImg from '../../public/img/show-case/iron-work/IMG_8394.jpeg';
---

<!-- DARK Section - Luxury Showcase with BENTO GRID + SCROLL ANIMATIONS -->
<section class="services section-padding bg-black-pure overflow-hidden border-t border-bronze/10" id="services">
  <div class="container max-w-7xl mx-auto px-6 md:px-8">
    <!-- Section Heading - Scroll fade in -->
    <div class="text-center mb-12 md:mb-16 scroll-reveal opacity-0">
      <h2 class="section-heading text-white mb-6">
        OUR SERVICES
      </h2>
      <div class="bronze-divider mx-auto"></div>
    </div>

    <!-- SERVICE GRID - Clean & Equal Layout -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">

      <!-- Service 1: Concrete Work -->
      <a href="/gallery/concrete" class="scroll-reveal opacity-0 group relative overflow-hidden bg-linear-to-br from-charcoal to-black-pure border-2 border-charcoal-light hover:border-bronze transition-all duration-500 cursor-pointer block h-[320px]" style="animation-delay: 0.1s">
        <div class="absolute inset-0">
          <Image
            src={concreteImg}
            alt="Red stamped concrete patio"
            class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
            quality={85}
          />
          <div class="absolute inset-0 bg-linear-to-t from-black via-black/70 to-black/30 group-hover:from-black/90 group-hover:via-black/60 transition-all duration-500"></div>
        </div>
        <div class="relative z-10 p-8 h-full flex flex-col justify-end">
          <h3 class="text-white text-2xl md:text-3xl font-bold mb-3 tracking-wide uppercase transform translate-y-0 group-hover:-translate-y-2 transition-transform duration-300">
            CONCRETE WORK
          </h3>
          <p class="text-[#D1D1D1] text-sm leading-relaxed opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-500">
            Driveways, patios, walkways & flatwork
          </p>
        </div>
      </a>

      <!-- Service 2: Outdoor Living -->
      <a href="/gallery/outdoor-kitchens" class="scroll-reveal opacity-0 group relative overflow-hidden bg-linear-to-br from-charcoal to-black-pure border-2 border-charcoal-light hover:border-bronze transition-all duration-500 cursor-pointer block h-[320px]" style="animation-delay: 0.2s">
        <div class="absolute inset-0">
          <Image
            src={outdoorLivingImg}
            alt="Covered outdoor kitchen"
            class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
            quality={85}
          />
          <div class="absolute inset-0 bg-linear-to-t from-black via-black/70 to-black/30 group-hover:from-black/90 group-hover:via-black/60 transition-all duration-500"></div>
        </div>
        <div class="relative z-10 p-8 h-full flex flex-col justify-end">
          <h3 class="text-white text-2xl md:text-3xl font-bold mb-3 tracking-wide uppercase transform translate-y-0 group-hover:-translate-y-2 transition-transform duration-300">
            OUTDOOR LIVING
          </h3>
          <p class="text-[#D1D1D1] text-sm leading-relaxed opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-500">
            Outdoor kitchens & covered patios
          </p>
        </div>
      </a>

      <!-- Service 3: Pools & Spas -->
      <a href="/gallery/pools-spas" class="scroll-reveal opacity-0 group relative overflow-hidden bg-linear-to-br from-charcoal to-black-pure border-2 border-charcoal-light hover:border-bronze transition-all duration-500 cursor-pointer block h-[320px]" style="animation-delay: 0.3s">
        <div class="absolute inset-0">
          <Image
            src={poolsImg}
            alt="Complete pool remodeling"
            class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
            quality={85}
          />
          <div class="absolute inset-0 bg-linear-to-t from-black via-black/60 to-black/20 group-hover:from-black/90 group-hover:via-black/50 transition-all duration-500"></div>
        </div>
        <div class="relative z-10 p-8 h-full flex flex-col justify-end">
          <h3 class="text-white text-2xl md:text-3xl font-bold mb-3 tracking-wide uppercase transform translate-y-0 group-hover:-translate-y-2 transition-transform duration-300">
            POOLS & SPAS
          </h3>
          <p class="text-[#D1D1D1] text-sm leading-relaxed opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-500">
            Remodeling & spa installations
          </p>
        </div>
      </a>

      <!-- Service 4: Fire Features -->
      <a href="/gallery/fire-features" class="scroll-reveal opacity-0 group relative overflow-hidden bg-linear-to-br from-charcoal to-black-pure border-2 border-charcoal-light hover:border-bronze transition-all duration-500 cursor-pointer block h-[320px]" style="animation-delay: 0.4s">
        <div class="absolute inset-0">
          <Image
            src={fireFeaturesImg}
            alt="Concrete fire pit with seating"
            class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
            quality={85}
          />
          <div class="absolute inset-0 bg-linear-to-t from-black via-black/70 to-black/30 group-hover:from-black/90 group-hover:via-black/60 transition-all duration-500"></div>
        </div>
        <div class="relative z-10 p-8 h-full flex flex-col justify-end">
          <h3 class="text-white text-2xl md:text-3xl font-bold mb-3 tracking-wide uppercase transform translate-y-0 group-hover:-translate-y-2 transition-transform duration-300">
            FIRE FEATURES
          </h3>
          <p class="text-[#D1D1D1] text-sm leading-relaxed opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-500">
            Fire pits, fireplaces & chimneys
          </p>
        </div>
      </a>

      <!-- Service 5: Landscaping -->
      <a href="/gallery/landscaping" class="scroll-reveal opacity-0 group relative overflow-hidden bg-linear-to-br from-charcoal to-black-pure border-2 border-charcoal-light hover:border-bronze transition-all duration-500 cursor-pointer block h-[320px]" style="animation-delay: 0.5s">
        <div class="absolute inset-0">
          <Image
            src={landscapingImg}
            alt="Artificial turf and garden installation"
            class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
            quality={85}
          />
          <div class="absolute inset-0 bg-linear-to-t from-black via-black/70 to-black/30 group-hover:from-black/90 group-hover:via-black/60 transition-all duration-500"></div>
        </div>
        <div class="relative z-10 p-8 h-full flex flex-col justify-end">
          <h3 class="text-white text-2xl md:text-3xl font-bold mb-3 tracking-wide uppercase transform translate-y-0 group-hover:-translate-y-2 transition-transform duration-300">
            LANDSCAPING
          </h3>
          <p class="text-[#D1D1D1] text-sm leading-relaxed opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-500">
            Turf, gardens & water features
          </p>
        </div>
      </a>

      <!-- Service 6: Iron Work -->
      <a href="/gallery/ironwork" class="scroll-reveal opacity-0 group relative overflow-hidden bg-linear-to-br from-charcoal to-black-pure border-2 border-charcoal-light hover:border-bronze transition-all duration-500 cursor-pointer block h-[320px]" style="animation-delay: 0.6s">
        <div class="absolute inset-0">
          <Image
            src={ironWorkImg}
            alt="Decorative iron archway"
            class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
            quality={85}
          />
          <div class="absolute inset-0 bg-linear-to-t from-black via-black/70 to-black/30 group-hover:from-black/90 group-hover:via-black/60 transition-all duration-500"></div>
        </div>
        <div class="relative z-10 p-8 h-full flex flex-col justify-end">
          <h3 class="text-white text-2xl md:text-3xl font-bold mb-3 tracking-wide uppercase transform translate-y-0 group-hover:-translate-y-2 transition-transform duration-300">
            IRON WORK
          </h3>
          <p class="text-[#D1D1D1] text-sm leading-relaxed opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-500">
            Gates, railings & decorative metalwork
          </p>
        </div>
      </a>

    </div>
  </div>
</section>

<!-- SCROLL ANIMATION SCRIPT -->
<script>
  import { initScrollAnimations, HOMEPAGE_SCROLL_CONFIG } from '../utils/animations.js';

  // Initialize scroll animations for Services section
  // Using HOMEPAGE_SCROLL_CONFIG: 100px buffer for smooth early reveals
  initScrollAnimations('.scroll-reveal', HOMEPAGE_SCROLL_CONFIG);
</script>

<style>
  /* Import reusable animations */
  @import '../styles/animations.css';
</style>
