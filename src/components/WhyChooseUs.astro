<!-- Why Choose Us Section -->
<section class="why-choose-us section-padding bg-black-pure border-t border-bronze/10" id="why-choose-us">
  <div class="container max-w-7xl mx-auto px-6 md:px-8">

    <!-- Section Heading -->
    <div class="section-intro why-reveal opacity-0" style="animation-delay: 0.1s">
      <h2 class="section-heading text-white mb-4">
        Why Choose Us
      </h2>
      <div class="bronze-divider mx-auto"></div>
    </div>

    <!-- Benefits Grid - 3 cards -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 md:gap-10 max-w-4xl mx-auto">

      <!-- Benefit 1: Experience -->
      <div class="why-reveal opacity-0 text-center p-6" style="animation-delay: 0.15s">
        <div class="w-16 h-16 mx-auto mb-5 flex items-center justify-center border border-bronze/30 rounded-sm">
          <ion-icon name="calendar-outline" class="text-bronze text-3xl"></ion-icon>
        </div>
        <h3 class="font-['Bebas_Neue'] text-2xl tracking-wide text-white mb-2">
          17+ Years Experience
        </h3>
        <p class="section-subheading text-slate-light">
          Serving Bakersfield since 2008
        </p>
      </div>

      <!-- Benefit 2: Licensed & Insured -->
      <div class="why-reveal opacity-0 text-center p-6" style="animation-delay: 0.2s">
        <div class="w-16 h-16 mx-auto mb-5 flex items-center justify-center border border-bronze/30 rounded-sm">
          <ion-icon name="shield-checkmark-outline" class="text-bronze text-3xl"></ion-icon>
        </div>
        <h3 class="font-['Bebas_Neue'] text-2xl tracking-wide text-white mb-2">
          Licensed & Insured
        </h3>
        <p class="section-subheading text-slate-light">
          CA License #1099349
        </p>
      </div>

      <!-- Benefit 3: Free Estimates -->
      <div class="why-reveal opacity-0 text-center p-6" style="animation-delay: 0.25s">
        <div class="w-16 h-16 mx-auto mb-5 flex items-center justify-center border border-bronze/30 rounded-sm">
          <ion-icon name="document-text-outline" class="text-bronze text-3xl"></ion-icon>
        </div>
        <h3 class="font-['Bebas_Neue'] text-2xl tracking-wide text-white mb-2">
          Free Estimates
        </h3>
        <p class="section-subheading text-slate-light">
          No obligation quotes
        </p>
      </div>

    </div>

    <!-- Financing Banner -->
    <div class="mt-12 md:mt-16 why-reveal opacity-0" style="animation-delay: 0.3s">
      <a
        href="https://www.lyonfinancial.net/apply/"
        target="_blank"
        rel="noopener noreferrer"
        class="group block max-w-3xl mx-auto bg-gradient-to-r from-charcoal to-charcoal-light border border-bronze/30 hover:border-bronze/60 transition-all duration-300 overflow-hidden"
      >
        <div class="flex flex-col sm:flex-row items-center gap-4 sm:gap-6 p-5 sm:p-6">
          <!-- Left: Message -->
          <div class="flex-1 text-center sm:text-left">
            <p class="text-white font-['Bebas_Neue'] text-xl sm:text-2xl tracking-wide mb-1">
              Flexible Financing Available
            </p>
            <p class="text-slate-light text-sm font-['Inter']">
              Up to $200K · Terms up to 30 years · <span class="text-bronze">Low rates available</span>
            </p>
          </div>
          <!-- Right: Lyon Logo + Arrow -->
          <div class="flex items-center gap-3 shrink-0">
            <div class="bg-white py-2 px-3 rounded-sm">
              <img
                src="/pics/Lyon-transparent.webp"
                alt="Lyon Financial"
                class="h-8 sm:h-10 w-auto"
              />
            </div>
            <ion-icon
              name="arrow-forward-outline"
              class="text-bronze text-xl group-hover:translate-x-1 transition-transform duration-300"
            ></ion-icon>
          </div>
        </div>
      </a>
    </div>

  </div>
</section>

<!-- SCROLL ANIMATION SCRIPT -->
<script>
  import { initScrollAnimations, HOMEPAGE_SCROLL_CONFIG } from '../utils/animations.js';

  initScrollAnimations('.why-choose-us .why-reveal', HOMEPAGE_SCROLL_CONFIG);
</script>

<style>
  @import '../styles/animations.css';
</style>
