---
// Why Choose Us - Trust Pillars Section
// Matches social section pattern exactly
---

<!-- Why Choose Us - Luxury Minimal -->
<section
  class="why-choose-us bg-black-pure py-16 md:py-24 border-t border-bronze/10 relative overflow-hidden"
>
  <!-- Subtle radial glow -->
  <div
    class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(184,134,11,0.06)_0%,transparent_70%)] pointer-events-none"
  >
  </div>

  <div class="container max-w-5xl mx-auto px-6 md:px-8 relative z-10">
    <div class="flex flex-col items-center gap-10 md:gap-12">
      <!-- Heading with gradient divider -->
      <div class="text-center space-y-4 scroll-reveal opacity-0" style="animation-delay: 0.1s">
        <div
          class="w-16 h-0.5 bg-gradient-to-r from-transparent via-bronze to-transparent mx-auto"
        >
        </div>
        <h2
          class="font-['Bebas_Neue'] text-3xl md:text-4xl text-white tracking-[0.15em]"
        >
          WHY ROCKY CONCRETE
        </h2>
        <p class="text-slate-light text-sm tracking-wider font-light">
          Excellence in every pour
        </p>
      </div>

      <!-- Trust Pillars - flex like social section for tighter grouping -->
      <div class="flex gap-8 scroll-reveal opacity-0" style="animation-delay: 0.2s">
        <div class="flex flex-col items-center gap-3 w-36 text-center">
          <div
            class="group w-16 h-16 flex items-center justify-center border-2 border-bronze/40 text-bronze hover:border-bronze hover:bg-bronze/10 transition-all duration-300 hover:scale-110 hover:shadow-[0_0_32px_rgba(184,134,11,0.4)]"
          >
            <ion-icon class="text-3xl" name="ribbon-outline"></ion-icon>
          </div>
          <span class="font-['Bebas_Neue'] text-lg text-white tracking-[0.1em]"
            >15+ YEARS</span
          >
        </div>

        <div class="flex flex-col items-center gap-3 w-36 text-center">
          <div
            class="group w-16 h-16 flex items-center justify-center border-2 border-bronze/40 text-bronze hover:border-bronze hover:bg-bronze/10 transition-all duration-300 hover:scale-110 hover:shadow-[0_0_32px_rgba(184,134,11,0.4)]"
          >
            <ion-icon class="text-3xl" name="shield-checkmark-outline"></ion-icon>
          </div>
          <span class="font-['Bebas_Neue'] text-lg text-white tracking-[0.1em]"
            >LICENSED</span
          >
        </div>

        <div class="flex flex-col items-center gap-3 w-36 text-center">
          <div
            class="group w-16 h-16 flex items-center justify-center border-2 border-bronze/40 text-bronze hover:border-bronze hover:bg-bronze/10 transition-all duration-300 hover:scale-110 hover:shadow-[0_0_32px_rgba(184,134,11,0.4)]"
          >
            <ion-icon class="text-3xl" name="clipboard-outline"></ion-icon>
          </div>
          <span class="font-['Bebas_Neue'] text-lg text-white tracking-[0.1em]"
            >FREE ESTIMATES</span
          >
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { initScrollAnimations, HOMEPAGE_SCROLL_CONFIG } from '../utils/animations.js';
  initScrollAnimations('.why-choose-us .scroll-reveal', HOMEPAGE_SCROLL_CONFIG);
</script>

<style>
  @import '../styles/animations.css';
</style>
