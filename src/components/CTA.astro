<!-- CTA Section -->
<section
  class="section-cta bg-black-pure section-padding border-t border-bronze/10"
  id="cta"
>
  <div class="container max-w-7xl mx-auto px-6 md:px-8">
    <!-- Heading -->
    <div
      class="text-center mb-12 md:mb-14 cta-reveal opacity-0"
      style="animation-delay: 0.1s"
    >
      <h2 class="section-heading text-white mb-4">Get Your Free Estimate</h2>
      <div class="bronze-divider mx-auto mb-6"></div>
      <p class="section-subheading text-slate-light max-w-2xl mx-auto">
        Tell us about your project and we'll get back to you within 24 hours.
      </p>
    </div>

    <!-- Two Column Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-start">
      <!-- Left: Contact Info -->
      <div class="space-y-8 cta-reveal opacity-0" style="animation-delay: 0.2s">
        <!-- Phone -->
        <div>
          <h3
            class="font-['Bebas_Neue'] text-2xl tracking-wide text-white mb-3"
          >
            Call Us
          </h3>
          <a
            href="tel:661-378-4017"
            class="inline-flex items-center gap-3 text-white hover:text-bronze transition-colors text-xl"
          >
            <ion-icon name="call-outline" class="text-2xl text-bronze"
            ></ion-icon>
            661-378-4017
          </a>
        </div>

        <!-- Email -->
        <div>
          <h3
            class="font-['Bebas_Neue'] text-2xl tracking-wide text-white mb-3"
          >
            Email Us
          </h3>
          <a
            href="mailto:rockyconcreteinc22@gmail.com"
            class="inline-flex items-center gap-3 text-white hover:text-bronze transition-colors text-base md:text-lg break-all"
          >
            <ion-icon name="mail-outline" class="text-2xl text-bronze shrink-0"
            ></ion-icon>
            rockyconcreteinc22@gmail.com
          </a>
        </div>

        <!-- Socials -->
        <div>
          <h3
            class="font-['Bebas_Neue'] text-2xl tracking-wide text-white mb-4"
          >
            Follow Us
          </h3>
          <div class="flex gap-4">
            <a
              href="https://www.tiktok.com/@rockyconcreteinc"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="TikTok"
              class="text-white hover:text-bronze transition-colors"
            >
              <ion-icon name="logo-tiktok" class="text-3xl"></ion-icon>
            </a>
            <a
              href="https://www.instagram.com/rockyconcreteinc/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Instagram"
              class="text-white hover:text-bronze transition-colors"
            >
              <ion-icon name="logo-instagram" class="text-3xl"></ion-icon>
            </a>
            <a
              href="https://m.facebook.com/RockyConcreteInc/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Facebook"
              class="text-white hover:text-bronze transition-colors"
            >
              <ion-icon name="logo-facebook" class="text-3xl"></ion-icon>
            </a>
          </div>
        </div>
      </div>

      <!-- Right: Form -->
      <div class="cta-reveal opacity-0" style="animation-delay: 0.3s">
        <div class="bg-charcoal border border-charcoal-light p-6 md:p-8">
          <form
            name="contact"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
            class="space-y-5"
          >
            <input type="hidden" name="form-name" value="contact" />
            <div style="display: none;">
              <label
                >Don't fill this out if you're human: <input
                  name="bot-field"
                /></label
              >
            </div>

            <div>
              <label for="full-name" class="block text-sm text-white mb-2"
                >Full Name</label
              >
              <input
                id="full-name"
                type="text"
                name="full-name"
                required
                class="w-full px-4 py-3 bg-black-pure border border-charcoal-light text-white placeholder-slate focus:outline-none focus:border-bronze transition-colors"
                placeholder="John Doe"
              />
            </div>

            <div>
              <label for="email" class="block text-sm text-white mb-2"
                >Email Address</label
              >
              <input
                id="email"
                type="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-black-pure border border-charcoal-light text-white placeholder-slate focus:outline-none focus:border-bronze transition-colors"
                placeholder="john@example.com"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm text-white mb-2"
                >Phone Number</label
              >
              <input
                id="phone"
                type="tel"
                name="phone"
                class="w-full px-4 py-3 bg-black-pure border border-charcoal-light text-white placeholder-slate focus:outline-none focus:border-bronze transition-colors"
                placeholder="(555) 123-4567"
              />
            </div>

            <div>
              <label for="message" class="block text-sm text-white mb-2"
                >Project Details</label
              >
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="w-full px-4 py-3 bg-black-pure border border-charcoal-light text-white placeholder-slate resize-none focus:outline-none focus:border-bronze transition-colors"
                placeholder="Tell us about your project..."></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-bronze hover:bg-bronze-light text-black-pure font-medium py-4 px-8 transition-colors"
            >
              Get Free Estimate
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import {
    initScrollAnimations,
    HOMEPAGE_SCROLL_CONFIG,
  } from "../utils/animations.js";
  initScrollAnimations(".section-cta .cta-reveal", HOMEPAGE_SCROLL_CONFIG);
</script>

<style>
  @import "../styles/animations.css";
</style>
