<section class="section-cta bg-gray-50 py-24 md:py-32" id="cta">
  <div class="container max-w-7xl mx-auto px-6 md:px-8">
    <div class="cta bg-white rounded-2xl shadow-2xl overflow-hidden grid grid-cols-1 lg:grid-cols-2">
      <!-- Left Side: Contact Info -->
      <div class="cta-left-box bg-gradient-to-br from-primary to-[#d35400] text-white p-8 md:p-12 lg:p-16">
        <div class="cta-text-box">
          <h2 class="cta-title text-3xl md:text-4xl font-semibold mb-6">
            Get In Touch
          </h2>
          <div class="section-description">
            <p class="cta-text text-lg leading-relaxed mb-8">
              We would love to talk to you about what we can do for you.
              Fill out the form for your free quote or call us immediately.
            </p>

            <ul class="contact-infos space-y-4 mb-8">
              <li class="contact-info">
                <a
                  class="cta-link flex items-center gap-3 text-white hover:text-gray-100 transition-colors"
                  href="tel:661-378-4017"
                >
                  <ion-icon class="text-2xl" name="call-outline"></ion-icon>
                  <span class="text-lg">661-378-4017</span>
                </a>
              </li>
              <li class="contact-info">
                <a
                  class="cta-link flex items-center gap-3 text-white hover:text-gray-100 transition-colors break-all"
                  href="mailto:rockyconcreteinc22@gmail.com"
                >
                  <ion-icon class="text-2xl" name="mail-outline"></ion-icon>
                  <span class="text-lg">rockyconcreteinc22@gmail.com</span>
                </a>
              </li>
            </ul>

            <hr class="border-white/30 mb-8" />

            <ul class="cta-social-links flex gap-6">
              <li>
                <a
                  class="footer-link text-white hover:text-gray-100 transition-colors"
                  href="https://www.tiktok.com/@rockyconcreteinc"
                  aria-label="TikTok"
                >
                  <ion-icon class="text-3xl" name="logo-tiktok"></ion-icon>
                </a>
              </li>
              <li>
                <a
                  class="footer-link text-white hover:text-gray-100 transition-colors"
                  href="https://www.instagram.com/rockyconcreteinc/"
                  aria-label="Instagram"
                >
                  <ion-icon class="text-3xl" name="logo-instagram"></ion-icon>
                </a>
              </li>
              <li>
                <a
                  class="footer-link text-white hover:text-gray-100 transition-colors"
                  href="https://m.facebook.com/RockyConcreteInc/"
                  aria-label="Facebook"
                >
                  <ion-icon class="text-3xl" name="logo-facebook"></ion-icon>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Right Side: Contact Form -->
      <div class="cta-right-box bg-white p-8 md:p-12 lg:p-16">
        <div class="cta-content-box">
          <h2 class="heading-tertiary text-gray-800 text-2xl md:text-3xl font-semibold mb-8">
            Request A Free Quote
          </h2>
          <div class="cta-form-box">
            <form
              class="cta-form space-y-6"
              action="https://formspree.io/f/xeojjaol"
              method="POST"
            >
              <div>
                <label
                  for="full-name"
                  class="block text-gray-700 font-medium mb-2"
                >
                  Full Name
                </label>
                <input
                  id="full-name"
                  type="text"
                  name="full-name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                />
              </div>

              <div>
                <label
                  for="email"
                  class="block text-gray-700 font-medium mb-2"
                >
                  Email
                </label>
                <input
                  id="email"
                  type="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                />
              </div>

              <div>
                <label
                  for="message"
                  class="block text-gray-700 font-medium mb-2"
                >
                  Message
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full bg-primary text-white font-semibold py-4 px-8 rounded-lg hover:bg-primary-dark transition-colors duration-300 focus:outline-none focus:ring-4 focus:ring-primary/50"
              >
                Get Free Quote
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
