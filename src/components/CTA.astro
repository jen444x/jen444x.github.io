---

<!-- CTA Section - Clean & Minimal -->
<section class="section-cta bg-black-pure section-padding border-t border-bronze/10" id="cta">
  <div class="container max-w-7xl mx-auto px-6 md:px-8">

    <!-- Heading Section -->
    <div class="text-center mb-8 md:mb-10 cta-reveal opacity-0" style="animation-delay: 0.1s">
      <h2 class="section-heading text-white mb-4">
        Get Your Free Estimate
      </h2>
      <div class="bronze-divider mx-auto mb-6"></div>
      <p class="section-subheading text-slate-light max-w-2xl mx-auto">
        Tell us about your project and we'll get back to you within 24 hours.
      </p>
    </div>

    <!-- Financing Value Prop Banner -->
    <div class="mb-12 md:mb-14 cta-reveal opacity-0" style="animation-delay: 0.15s">
      <a
        href="https://www.lyonfinancial.net/apply/"
        target="_blank"
        rel="noopener noreferrer"
        class="group block max-w-3xl mx-auto bg-gradient-to-r from-charcoal to-charcoal-light border border-bronze/30 hover:border-bronze/60 transition-all duration-300 overflow-hidden"
      >
        <div class="flex flex-col sm:flex-row items-center gap-4 sm:gap-6 p-5 sm:p-6">
          <!-- Left: Message -->
          <div class="flex-1 text-center sm:text-left">
            <p class="text-white font-['Bebas_Neue'] text-xl sm:text-2xl tracking-wide mb-1">
              Flexible Financing Available
            </p>
            <p class="text-slate-light text-sm font-['Inter']">
              Up to $200K · Terms up to 30 years · <span class="text-bronze">No credit impact to check rate</span>
            </p>
          </div>
          <!-- Right: Lyon Logo + Arrow -->
          <div class="flex items-center gap-3 shrink-0">
            <div class="bg-white py-2 px-3 rounded-sm">
              <img
                src="/pics/Lyon-transparent.webp"
                alt="Lyon Financial"
                class="h-8 sm:h-10 w-auto"
              />
            </div>
            <ion-icon
              name="arrow-forward-outline"
              class="text-bronze text-xl group-hover:translate-x-1 transition-transform duration-300"
            ></ion-icon>
          </div>
        </div>
      </a>
    </div>

    <!-- Split Layout: Contact Info + Form -->
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-8 lg:gap-12 items-start">

      <!-- Left: Contact Information (2 cols) -->
      <div class="lg:col-span-2 space-y-6 cta-reveal opacity-0" style="animation-delay: 0.25s">
        <!-- Phone -->
        <div class="group">
          <h3 class="font-['Bebas_Neue'] text-xl md:text-2xl tracking-wide text-white mb-4">
            Call Us
          </h3>
          <a
            href="tel:661-378-4017"
            class="inline-flex items-center gap-3 text-white-soft hover:text-bronze transition-all duration-300 text-lg md:text-xl"
          >
            <ion-icon class="text-2xl" name="call-outline"></ion-icon>
            <span class="font-['Inter'] font-light tracking-wide">661-378-4017</span>
          </a>
        </div>

        <!-- Email -->
        <div class="group">
          <h3 class="font-['Bebas_Neue'] text-xl md:text-2xl tracking-wide text-white mb-4">
            Email Us
          </h3>
          <a
            href="mailto:rockyconcreteinc22@gmail.com"
            class="inline-flex items-start gap-3 text-white-soft hover:text-bronze transition-all duration-300 text-base md:text-lg break-all"
          >
            <ion-icon class="text-2xl shrink-0 mt-1" name="mail-outline"></ion-icon>
            <span class="font-['Inter'] font-light tracking-wide">rockyconcreteinc22@gmail.com</span>
          </a>
        </div>

        <!-- Social Links -->
        <div class="group pt-6">
          <h3 class="font-['Bebas_Neue'] text-xl md:text-2xl tracking-wide text-white mb-6">
            Follow Us
          </h3>
          <div class="flex gap-6">
            <a
              href="https://www.tiktok.com/@rockyconcreteinc"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="TikTok"
              class="text-white-soft hover:text-bronze transition-all duration-300 transform hover:scale-110"
            >
              <ion-icon class="text-3xl" name="logo-tiktok"></ion-icon>
            </a>
            <a
              href="https://www.instagram.com/rockyconcreteinc/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Instagram"
              class="text-white-soft hover:text-bronze transition-all duration-300 transform hover:scale-110"
            >
              <ion-icon class="text-3xl" name="logo-instagram"></ion-icon>
            </a>
            <a
              href="https://m.facebook.com/RockyConcreteInc/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Facebook"
              class="text-white-soft hover:text-bronze transition-all duration-300 transform hover:scale-110"
            >
              <ion-icon class="text-3xl" name="logo-facebook"></ion-icon>
            </a>
          </div>
        </div>

      </div>

      <!-- Right: Form (3 cols) -->
      <div class="lg:col-span-3 cta-reveal opacity-0" style="animation-delay: 0.3s">
        <div class="bg-charcoal border border-charcoal-light p-6 md:p-8 shadow-2xl">
          <form
            name="contact"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
            class="space-y-5"
          >
            <!-- Netlify Forms bot field (hidden) -->
            <input type="hidden" name="form-name" value="contact" />
            <div style="display: none;">
              <label>Don't fill this out if you're human: <input name="bot-field" /></label>
            </div>
            <!-- Full Name -->
            <div>
              <label
                for="full-name"
                class="block font-['Inter'] text-sm font-medium text-white-soft mb-2 tracking-wide"
              >
                Full Name
              </label>
              <input
                id="full-name"
                type="text"
                name="full-name"
                required
                class="w-full px-4 py-3 bg-black-pure border border-charcoal-light text-white placeholder-slate focus:outline-none focus:border-bronze transition-all duration-300 font-['Inter'] text-base"
                placeholder="John Doe"
              />
            </div>

            <!-- Email -->
            <div>
              <label
                for="email"
                class="block font-['Inter'] text-sm font-medium text-white-soft mb-2 tracking-wide"
              >
                Email Address
              </label>
              <input
                id="email"
                type="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-black-pure border border-charcoal-light text-white placeholder-slate focus:outline-none focus:border-bronze transition-all duration-300 font-['Inter'] text-base"
                placeholder="john@example.com"
              />
            </div>

            <!-- Phone -->
            <div>
              <label
                for="phone"
                class="block font-['Inter'] text-sm font-medium text-white-soft mb-2 tracking-wide"
              >
                Phone Number
              </label>
              <input
                id="phone"
                type="tel"
                name="phone"
                class="w-full px-4 py-3 bg-black-pure border border-charcoal-light text-white placeholder-slate focus:outline-none focus:border-bronze transition-all duration-300 font-['Inter'] text-base"
                placeholder="(555) 123-4567"
              />
            </div>

            <!-- Message -->
            <div>
              <label
                for="message"
                class="block font-['Inter'] text-sm font-medium text-white-soft mb-2 tracking-wide"
              >
                Project Details
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="w-full px-4 py-3 bg-black-pure border border-charcoal-light text-white placeholder-slate resize-none focus:outline-none focus:border-bronze transition-all duration-300 font-['Inter'] text-base"
                placeholder="Tell us about your project..."
              ></textarea>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full bg-transparent border-2 border-white text-white font-['Inter'] font-medium text-base md:text-lg py-4 px-8 tracking-wide transition-all duration-300 hover:bg-white hover:text-black-pure hover:border-bronze focus:outline-none focus:ring-2 focus:ring-bronze focus:ring-offset-2 focus:ring-offset-charcoal"
            >
              Get Free Estimate
            </button>
          </form>
        </div>
      </div>

    </div>


  </div>
</section>

<!-- SCROLL ANIMATION SCRIPT -->
<script>
  import { initScrollAnimations, HOMEPAGE_SCROLL_CONFIG } from '../utils/animations.js';

  // Initialize scroll animations for CTA section
  initScrollAnimations('.section-cta .cta-reveal', HOMEPAGE_SCROLL_CONFIG);
</script>

<style>
  @import '../styles/animations.css';
</style>
