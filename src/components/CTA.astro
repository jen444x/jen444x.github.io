---
// CTA Section - Luxury Minimal
// Form-centered layout with elegant contact strip
---

<!-- CTA Section - Luxury Minimal -->
<section
  class="section-cta bg-black-pure py-16 md:py-24 border-t border-bronze/10 relative overflow-hidden"
  id="cta"
>
  <!-- Subtle radial glow -->
  <div
    class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(184,134,11,0.06)_0%,transparent_70%)] pointer-events-none"
  >
  </div>

  <div class="container max-w-3xl mx-auto px-6 md:px-8 relative z-10">
    <!-- Heading -->
    <div
      class="text-center mb-10 md:mb-12 cta-reveal opacity-0"
      style="animation-delay: 0.1s"
    >
      <h2 class="section-heading text-white mb-4">Get Your Free Estimate</h2>
      <div class="bronze-divider mx-auto mb-6"></div>
      <p class="section-subheading text-slate-light max-w-2xl mx-auto">
        Fill out the form below or give us a call â€” we'll get back to you within
        24 hours.
      </p>
    </div>

    <!-- Contact Strip -->
    <div
      class="flex flex-col sm:flex-row items-center justify-center gap-6 sm:gap-12 mb-10 md:mb-12 cta-reveal opacity-0"
      style="animation-delay: 0.2s"
    >
      <a
        href="tel:661-378-4017"
        class="group flex items-center gap-3 text-white hover:text-bronze transition-colors"
      >
        <ion-icon name="call-outline" class="text-2xl text-bronze"></ion-icon>
        <span class="text-xl">661-378-4017</span>
      </a>

      <div class="hidden sm:block w-px h-8 bg-bronze/30"></div>

      <a
        href="mailto:rockyconcreteinc22@gmail.com"
        class="group flex items-center gap-3 text-white hover:text-bronze transition-colors text-base md:text-lg"
      >
        <ion-icon name="mail-outline" class="text-2xl text-bronze"></ion-icon>
        <span>rockyconcreteinc22@gmail.com</span>
      </a>
    </div>

    <!-- Form - Centered -->
    <div class="cta-reveal opacity-0" style="animation-delay: 0.3s">
      <div
        class="bg-charcoal/50 border border-bronze/20 p-6 md:p-8 backdrop-blur-sm"
      >
        <form
          name="contact"
          method="POST"
          data-netlify="true"
          netlify-honeypot="bot-field"
          class="space-y-5"
        >
          <input type="hidden" name="form-name" value="contact" />
          <div style="display: none;">
            <label
              >Don't fill this out if you're human: <input
                name="bot-field"
              /></label
            >
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div>
              <label
                for="full-name"
                class="block text-xs text-slate-light mb-2 tracking-wider uppercase"
                >Your Name</label
              >
              <input
                id="full-name"
                type="text"
                name="full-name"
                required
                class="w-full px-4 py-3 bg-black-pure/80 border border-white/15 text-white placeholder-slate/50 focus:outline-none focus:border-bronze hover:border-white/25 transition-colors"
                placeholder="John Doe"
              />
            </div>

            <div>
              <label
                for="phone"
                class="block text-xs text-slate-light mb-2 tracking-wider uppercase"
                >Phone</label
              >
              <input
                id="phone"
                type="tel"
                name="phone"
                class="w-full px-4 py-3 bg-black-pure/80 border border-white/15 text-white placeholder-slate/50 focus:outline-none focus:border-bronze hover:border-white/25 transition-colors"
                placeholder="(661) 555-1234"
              />
            </div>
          </div>

          <div>
            <label
              for="email"
              class="block text-xs text-slate-light mb-2 tracking-wider uppercase"
              >Email</label
            >
            <input
              id="email"
              type="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-black-pure/80 border border-white/15 text-white placeholder-slate/50 focus:outline-none focus:border-bronze hover:border-white/25 transition-colors"
              placeholder="john@example.com"
            />
          </div>

          <div>
            <label
              for="message"
              class="block text-xs text-slate-light mb-2 tracking-wider uppercase"
              >Tell Us About Your Vision</label
            >
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full px-4 py-3 bg-black-pure/80 border border-white/15 text-white placeholder-slate/50 resize-none focus:outline-none focus:border-bronze hover:border-white/25 transition-colors"
              placeholder="What are you looking to create?"></textarea>
          </div>

          <button
            type="submit"
            class="w-full bg-bronze hover:bg-bronze-light text-black-pure font-medium py-4 px-8 transition-all duration-300 tracking-wider uppercase text-sm hover:shadow-[0_0_24px_rgba(184,134,11,0.3)]"
          >
            Request Free Estimate
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  import {
    initScrollAnimations,
    HOMEPAGE_SCROLL_CONFIG,
  } from "../utils/animations.js";
  initScrollAnimations(".section-cta .cta-reveal", HOMEPAGE_SCROLL_CONFIG);
</script>

<style>
  @import "../styles/animations.css";

  /* Override browser autofill styles to stay dark */
  input:-webkit-autofill,
  input:-webkit-autofill:hover,
  input:-webkit-autofill:focus,
  textarea:-webkit-autofill,
  textarea:-webkit-autofill:hover,
  textarea:-webkit-autofill:focus {
    -webkit-box-shadow: 0 0 0 1000px rgba(10, 10, 10, 0.8) inset !important;
    -webkit-text-fill-color: white !important;
    caret-color: white;
    border-color: rgba(184, 134, 11, 0.2) !important;
  }
</style>
